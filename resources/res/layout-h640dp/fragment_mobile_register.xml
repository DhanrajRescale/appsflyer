<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/relativeLayout"
    android:tag="layout-h640dp/fragment_mobile_register_0"
    android:background="@color/onBoardingScreenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:tag="binding_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/illustration"
                    android:layout_width="wrap_content"
                    android:layout_height="156dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="H,10:6"
                    app:layout_constraintHeight_percent="0.25"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.05"
                    app:layout_constraintWidth_percent="0.2"/>
                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black_1A1A1A"
                    android:id="@+id/login_account_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/join_our_stockgro_family"
                    android:fontFamily="@font/inter_600"
                    android:textAlignment="textStart"
                    android:layout_marginHorizontal="24dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/illustration"/>
                <com.assetgro.stockgro.widget.MultipleCountryInputView
                    android:id="@+id/input_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:inputViewType="number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/login_account_label"
                    app:title="@string/mobile_number_hint"/>
                <TextView
                    android:textSize="10dp"
                    android:ellipsize="end"
                    android:id="@+id/spam_disclaimer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/mobile_number_disclaimer"
                    android:maxLines="1"
                    android:fontFamily="@font/inter_400"
                    android:textAlignment="viewEnd"
                    app:layout_constraintEnd_toEndOf="@+id/input_view"
                    app:layout_constraintStart_toStartOf="@+id/input_view"
                    app:layout_constraintTop_toBottomOf="@+id/input_view"/>
                <com.assetgro.stockgro.widget.InputView
                    android:id="@+id/invitation_code_input_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:inputViewType="text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spam_disclaimer"
                    app:title="@string/invitation_code_optional"/>
                <include
                    android:id="@+id/tnc_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/invitation_code_input_view"
                    layout="@layout/layout_tnc_registration"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:text="@string/text_send_otp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tnc_container"
                    style="@style/primaryButton"/>
                <com.assetgro.stockgro.widget.TnCLinkView
                    android:textSize="11dp"
                    android:id="@+id/terms_and_conditions"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:fontFamily="@font/inter_500"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/next"/>
                <include
                    android:id="@+id/layout_login_account_footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentBottom="true"
                    app:layout_constraintEnd_toEndOf="@+id/next"
                    app:layout_constraintStart_toStartOf="@+id/next"
                    app:layout_constraintTop_toBottomOf="@+id/next"
                    layout="@layout/layout_login_account_footer"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
