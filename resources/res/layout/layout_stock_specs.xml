<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:tag="layout/layout_stock_specs_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="3"
        android:layout_marginHorizontal="16dp">
        <LinearLayout
            android:gravity="left"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/avg_price"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_gravity="center_horizontal"
                android:id="@+id/stock_holdings_item_avg_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:text="₹ 470"
                android:fontFamily="@font/inter_600"/>
        </LinearLayout>
        <View
            android:background="@color/lightColorSeparator"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="left"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/market_price"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_gravity="center_horizontal"
                android:id="@+id/stock_holdings_item_cmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:text="₹ 470"
                android:fontFamily="@font/inter_600"/>
        </LinearLayout>
        <View
            android:id="@+id/separator_1"
            android:background="@color/lightColorSeparator"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="left"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:layout_gravity="center_horizontal"
                android:id="@+id/profit_loss_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_profit"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_gravity="center_horizontal"
                android:id="@+id/stock_holdings_item_profit_loss_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:text="₹ 432"
                android:fontFamily="@font/inter_600"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:background="@color/skyBlueCardSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginRight="@dimen/margin_horizontal"/>
    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="3"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">
        <LinearLayout
            android:gravity="left"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:layout_gravity="center_horizontal"
                android:id="@+id/stock_holdings_item_purchase_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/text_purchase_value"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_gravity="center_horizontal"
                android:id="@+id/stock_holdings_item_purchase_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="0"
                android:fontFamily="@font/inter_600"/>
        </LinearLayout>
        <View
            android:background="@color/lightColorSeparator"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="left"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/text_market_value"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_gravity="center_horizontal"
                android:id="@+id/stock_holdings_item_market_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="₹ 12966"
                android:fontFamily="@font/inter_600"/>
        </LinearLayout>
        <View
            android:id="@+id/separator"
            android:background="@color/lightColorSeparator"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="left"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/text_quantity"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_gravity="center_horizontal"
                android:id="@+id/stock_holdings_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="30"
                android:fontFamily="@font/inter_600"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
