<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_prepzone_whats_new_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/whats_new_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_prepzone_change"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="16dp"
                android:textColor="#4a20e6"
                android:id="@+id/whats_new_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/prepzones_use_modeled_data"
                android:maxLines="1"
                android:fontFamily="@font/figtree_regular"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="96dp"
                app:layout_constraintStart_toEndOf="@+id/whats_new_icon"
                app:layout_constraintTop_toTopOf="@+id/whats_new_icon"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/whats_new_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="20dp"
                android:text="@string/whats_new_message"
                android:maxLines="3"
                android:fontFamily="@font/figtree_regular"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/whats_new_title"
                app:layout_constraintTop_toBottomOf="@+id/whats_new_title"/>
            <androidx.legacy.widget.Space
                android:id="@+id/message_content_space"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/whats_new_message"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/whats_new_content_container"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:paddingHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/message_content_space">
                <View
                    android:background="#cfcfcf"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/whats_new_drop_down"
                android:visibility="gone"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/whats_new_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/whats_new_title">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/whats_new_drop_down_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardBackgroundColor="#fd6b42"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/white"
                    android:paddingLeft="8dp"
                    android:paddingTop="0dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_new"
                    android:textAllCaps="true"
                    android:fontFamily="@font/inter_700"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="0dp"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
