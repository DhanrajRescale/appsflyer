<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_kyc_verification_rejected_0"
    android:background="@color/onBoardingScreenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/illustration"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="32dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_payment_failed"/>
    <ImageView
        android:id="@+id/kyc_text_icon"
        android:visibility="visible"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintEnd_toStartOf="@+id/kyc_verification_failed_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/illustration"
        app:srcCompat="@drawable/ic_kyc_verification_failed"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/kyc_verification_failed_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/kyc_verification_failed_message"
        android:fontFamily="@font/inter_500"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/kyc_text_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/kyc_text_icon"
        app:layout_constraintTop_toTopOf="@+id/kyc_text_icon"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/kyc_message_pointers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="52dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@+id/retry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kyc_verification_failed_message"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black_1A1A1A"
        android:id="@+id/limit_message"
        android:background="@drawable/rounded_color_kyc_limit_message_corner_radius_10dp"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:paddingRight="16dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kyc_message_pointers"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/retry"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_margin="16dp"
        android:text="@string/retry"
        android:letterSpacing="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/limit_message"
        style="@style/primaryButton"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/need_help_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_margin="16dp"
        android:text="@string/text_need_help"
        android:letterSpacing="0.1"
        app:icon="@drawable/ic_need_help"
        app:iconGravity="textStart"
        app:iconTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retry"
        style="@style/secondaryButton"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/black"
        android:id="@+id/contact_support"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/contact_support"
        android:fontFamily="@font/inter_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/need_help_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>
