<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_otp_entry_verification_0"
    android:background="@color/onBoardingScreenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/illustration"
                android:layout_width="261dp"
                android:layout_height="182dp"
                android:maxHeight="196dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.06"
                app:srcCompat="@drawable/ic_otp"/>
            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="@+id/enter_otp_label"
                app:layout_constraintTop_toBottomOf="@+id/illustration"
                app:srcCompat="@drawable/ic_back_blue"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorAccent"
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textAllCaps="true"
                android:fontFamily="@font/inter_600"
                app:layout_constraintBottom_toBottomOf="@+id/back_arrow"
                app:layout_constraintLeft_toRightOf="@+id/back_arrow"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/back_arrow"/>
            <TextView
                android:textSize="24dp"
                android:id="@+id/enter_otp_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/enter_the_6_digit_otp_number"
                android:fontFamily="@font/inter_600"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/timer"
                app:layout_constraintStart_toStartOf="@+id/pin_label"
                app:layout_constraintTop_toBottomOf="@+id/back_arrow"/>
            <TextView
                android:textColor="@color/timerColor"
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/inter_600"
                android:layout_marginEnd="27dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back"/>
            <TextView
                android:textSize="12dp"
                android:id="@+id/pin_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/we_just_sent_you_on_your_mobile_number"
                android:fontFamily="@font/inter_500"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_otp_label"/>
            <com.chaos.view.PinView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/pin_view"
                android:padding="4dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:itemBackground="@color/inputViewBackgroundColor"
                android:inputType="numberPassword"
                app:cursorColor="@color/colorPrimary"
                app:cursorWidth="2dp"
                app:hideLineWhenFilled="true"
                app:itemCount="6"
                app:itemHeight="48dp"
                app:itemRadius="16dp"
                app:itemSpacing="12dp"
                app:itemWidth="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pin_label"
                app:lineColor="@android:color/transparent"
                app:lineWidth="1dp"
                app:viewType="surfaceView"/>
            <TextView
                android:textSize="12dp"
                android:id="@+id/did_not_recieve_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/didnt_receive_the_otp_resend_it_over"
                android:fontFamily="@font/inter_500"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pin_view"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/first_otp_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/purple_CCD0FD"
                app:cardCornerRadius="4dp"
                app:layout_constraintStart_toStartOf="@+id/did_not_recieve_text"
                app:layout_constraintTop_toBottomOf="@+id/did_not_recieve_text">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/deep_purple"
                    android:id="@+id/first_option_text"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sms_text"
                    android:fontFamily="@font/inter_600"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textSize="12dp"
                android:id="@+id/text_or"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="or"
                android:fontFamily="@font/inter_500"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/first_otp_choice"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/first_otp_choice"
                app:layout_constraintTop_toTopOf="@+id/first_otp_choice"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/second_otp_choice"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="@color/purple_CCD0FD"
                app:cardCornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/first_otp_choice"
                app:layout_constraintStart_toEndOf="@+id/text_or"
                app:layout_constraintTop_toTopOf="@+id/first_otp_choice">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/deep_purple"
                    android:id="@+id/second_option_text"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/call_text"
                    android:fontFamily="@font/inter_600"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textSize="12dp"
                android:id="@+id/text_or_2"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="or"
                android:fontFamily="@font/inter_500"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/first_otp_choice"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/second_otp_choice"
                app:layout_constraintTop_toTopOf="@+id/first_otp_choice"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/third_otp_choice"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="@color/purple_CCD0FD"
                app:cardCornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/first_otp_choice"
                app:layout_constraintStart_toEndOf="@+id/text_or_2"
                app:layout_constraintTop_toTopOf="@+id/first_otp_choice">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/deep_purple"
                    android:id="@+id/third_option_text"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/whatsapp_text"
                    android:fontFamily="@font/inter_600"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.button.MaterialButton
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:text="@string/verify"
        app:layout_anchorGravity="bottom|center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/primaryButton"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
