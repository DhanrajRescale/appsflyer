<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_group_description_edit_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/group_description_layout"
        android:background="@drawable/input_box_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:background="@drawable/input_box_background"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/inputViewTitleColor"
                android:id="@+id/group_description_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/text_edit_group_desc"
                android:fontFamily="@font/inter_500"
                android:layout_marginStart="8dp"/>
            <EditText
                android:textSize="14dp"
                android:textColor="@color/black_1A1A1A"
                android:gravity="top"
                android:id="@+id/group_description_edit_text_view"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@+id/group_description_label"
                android:inputType="textMultiLine"
                android:fontFamily="@font/inter_500"
                android:layout_marginEnd="8dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/max_length_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/text_max_length_group_description"
        app:layout_constraintEnd_toEndOf="@+id/group_description_layout"
        app:layout_constraintTop_toBottomOf="@+id/group_description_layout"/>
    <TextView
        android:textColor="@color/inputViewErrorColor"
        android:id="@+id/max_length_error_label"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/text_max_length_group_description_error"
        app:layout_constraintEnd_toEndOf="@+id/group_description_layout"
        app:layout_constraintTop_toBottomOf="@+id/group_description_layout"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/action_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:text="@string/Cancel"
            android:layout_weight="1"
            style="@style/secondaryButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:text="@string/save"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/primaryButton"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
