<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/social_auth_container"
    android:tag="layout/layout_profile_social_auth_0"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/facebook_auth_container"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:id="@+id/facebook_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/facebook_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facebook"
                android:fontFamily="@font/inter_600"
                android:textAlignment="center"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <com.assetgro.stockgro.widget.ChipView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/facebook_verified_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_600"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <com.assetgro.stockgro.widget.InputView
            android:id="@+id/facebook_auth_name_input_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/facebook_header"
            app:editable="false"
            app:inputViewType="text"
            app:title="Name"/>
        <com.assetgro.stockgro.widget.InputView
            android:id="@+id/facebook_mobile_number_input_view"
            android:visibility="gone"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/facebook_auth_name_input_view"
            app:editable="false"
            app:inputViewType="none"
            app:title="Mobile Number"/>
        <com.assetgro.stockgro.widget.InputView
            android:id="@+id/facebook_email_input_view"
            android:visibility="gone"
            android:clickable="false"
            android:saveEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/facebook_mobile_number_input_view"
            android:alpha="0.5"
            app:editable="false"
            app:inputViewType="none"
            app:title="Email"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facebook_email_input_view"
            app:cardCornerRadius="16dp">
            <com.google.android.material.button.MaterialButton
                android:textColor="@color/white"
                android:gravity="start|center_vertical"
                android:id="@+id/fbButton"
                android:background="@color/color_facebook"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_connect_with_facebook"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                app:icon="@mipmap/ic_facebook_logo"
                app:iconGravity="start"
                app:iconPadding="15dp"
                app:iconSize="30dp"
                app:iconTint="@null"
                style="@style/primaryButton"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/linkedin_auth_container"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/homeScreenCardColor"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebook_auth_container">
        <RelativeLayout
            android:id="@+id/linkedin_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/linkedin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/linkedin"
                android:fontFamily="@font/inter_600"
                android:textAlignment="center"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <com.assetgro.stockgro.widget.ChipView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/linkedin_verified_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 90"
                android:fontFamily="@font/inter_600"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <com.assetgro.stockgro.widget.InputView
            android:id="@+id/linkedin_auth_name_input_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/linkedin_header"
            app:editable="false"
            app:inputViewType="text"
            app:title="Name"/>
        <com.assetgro.stockgro.widget.InputView
            android:id="@+id/linkedin_mobile_number_input_view"
            android:visibility="gone"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/linkedin_auth_name_input_view"
            app:editable="false"
            app:inputViewType="none"
            app:title="Mobile Number"/>
        <com.assetgro.stockgro.widget.InputView
            android:id="@+id/linkedin_email_input_view"
            android:visibility="gone"
            android:clickable="false"
            android:saveEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/linkedin_mobile_number_input_view"
            android:alpha="0.5"
            app:editable="false"
            app:inputViewType="none"
            app:title="Email"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linkedin_email_input_view"
            app:cardCornerRadius="16dp">
            <com.google.android.material.button.MaterialButton
                android:textColor="@color/white"
                android:gravity="start|center_vertical"
                android:id="@+id/linkedInButton"
                android:background="@color/color_linkedin"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_connect_with_linkedin"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                app:icon="@mipmap/ic_linked_in_logo"
                app:iconGravity="start"
                app:iconPadding="15dp"
                app:iconSize="30dp"
                app:iconTint="@color/white"
                style="@style/primaryButton"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
