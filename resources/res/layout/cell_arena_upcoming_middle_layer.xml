<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upcoming_constraint_layout"
    android:tag="layout/cell_arena_upcoming_middle_layer_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="12dp"
        android:textColor="@color/arenaTitle"
        android:id="@+id/extra_title"
        android:background="@color/screenBackground"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/join_virtual_leagues"
        android:fontFamily="@font/inter_400"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.assetgro.stockgro.feature_arena.widget.PrepZoneWhatsNewWidget
        android:id="@+id/whats_new_prepzone"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extra_title"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recycler_view_container"
        android:tag="binding_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whats_new_prepzone">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/black_1A1A1A"
            android:id="@+id/ongoing_leagues_title_extra"
            android:tag="binding_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_600"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/spacer_16_dp"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ongoing_leagues_title_extra"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/black_1A1A1A"
            android:id="@+id/ongoing_leagues_title"
            android:tag="binding_3"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_600"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spacer_16_dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/league_recycler_view"
            android:tag="binding_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/ongoing_leagues_title"
            app:layout_goneMarginTop="20dp"/>
        <ImageView
            android:id="@+id/iv_sortBy"
            android:tag="binding_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/ongoing_leagues_title"
            app:layout_constraintEnd_toEndOf="@+id/league_recycler_view"
            app:layout_constraintTop_toBottomOf="@+id/spacer_16_dp"
            app:srcCompat="@drawable/ic_sort"/>
        <me.relex.circleindicator.CircleIndicator2
            android:id="@+id/indicator"
            android:tag="binding_6"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            app:ci_drawable="@drawable/dark_indicator_selected"
            app:ci_drawable_unselected="@drawable/dark_indicator_unselected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/league_recycler_view"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
