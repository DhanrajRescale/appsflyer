<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stock_order_container"
    android:tag="layout/content_stock_short_sell_order_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/data_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/rounded_sky_blue_rectangle_corner_radius_16dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
            <RelativeLayout
                android:paddingTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">
                <Spinner
                    android:textSize="16dp"
                    android:id="@+id/portfolio_spinner"
                    android:background="@drawable/rounded_sky_blue_rectangle_corner_radius_16dp"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/default_portfolio"
                    android:dropDownSelector="@drawable/ic_dropdown_icon"
                    android:popupBackground="@drawable/background_toolbar_overflow"
                    android:fontFamily="@font/inter_600"
                    android:layout_marginEnd="88dp"/>
                <ImageView
                    android:id="@+id/portfolio_select_tutorial_icon"
                    android:visibility="gone"
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:rotation="30"
                    android:layout_marginEnd="24dp"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/ic_curved_arrow"/>
                <TextView
                    android:textSize="11sp"
                    android:textColor="@color/black_1A1A1A"
                    android:id="@+id/portfolio_select_tutorial_desc"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/select_portfolio_desc_text"
                    android:layout_below="@+id/portfolio_select_tutorial_icon"
                    android:fontFamily="@font/tutorial_font"
                    android:textAlignment="textEnd"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black_1A1A1A"
                    android:id="@+id/portfolio_name"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/default_portfolio"
                    android:fontFamily="@font/inter_600"
                    android:paddingStart="16dp"
                    android:layout_marginStart="-4dp"
                    android:layout_marginEnd="88dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/cash_balance_container"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:paddingHorizontal="8dp">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/black_1A1A1A"
                        android:id="@+id/cash_balance_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cash_balance_with_colon"
                        android:fontFamily="@font/inter_600"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/black_1A1A1A"
                        android:id="@+id/portfolio_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_600"
                        android:paddingStart="8dp"/>
                </LinearLayout>
                <com.assetgro.stockgro.widget.ChipView
                    android:id="@+id/short_sell_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_below="@+id/cash_balance_container"
                    android:layout_marginStart="8dp"/>
            </RelativeLayout>
            <View
                android:background="@color/skyBlueCardSeparator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"/>
            <com.assetgro.stockgro.widget.InputView
                android:id="@+id/order_input_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:inputViewType="tab"
                app:selectedTab="tab1"
                app:tab1="@string/text_market"
                app:tab2="@string/text_limit"
                app:title="@string/order_type"/>
            <com.assetgro.stockgro.widget.InputView
                android:id="@+id/stock_quantity_input_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:inputViewType="realNumberQuantity"
                app:title="@string/quantity"/>
            <com.assetgro.stockgro.widget.PriceInputView
                android:id="@+id/price_input_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:errorEnabled="true"
                app:header="@string/price"
                app:inputViewType="money"/>
            <com.assetgro.stockgro.widget.PriceInputView
                android:id="@+id/total_amount_input_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:errorEnabled="true"
                app:header="@string/total_amount"
                app:inputViewType="money"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">
                <CheckBox
                    android:id="@+id/regular_check_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:checked="true"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/black_1A1A1A"
                    android:id="@+id/regular_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/text_regular"
                    android:fontFamily="@font/inter_500"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/regular_check_button"
                    app:layout_constraintTop_toTopOf="parent"/>
                <CheckBox
                    android:id="@+id/bracket_order_check_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:checked="true"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/regular_label"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/black_1A1A1A"
                    android:id="@+id/bracket_order_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/text_bracket_order"
                    android:fontFamily="@font/inter_500"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/bracket_order_check_button"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/bracket_order_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.assetgro.stockgro.widget.InputView
                        android:id="@+id/stop_loss_delta_input_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        app:inputViewType="realNumber"
                        app:title="@string/stop_loss"/>
                    <com.assetgro.stockgro.widget.InputView
                        android:id="@+id/stop_loss_percentage_input_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        app:inputViewType="realNumber"
                        app:title="@string/stop_loss_percentage"/>
                    <com.assetgro.stockgro.widget.PriceInputView
                        android:id="@+id/stop_loss_amount_input_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        app:header="@string/stop_loss_amount"
                        app:inputViewType="money"/>
                </LinearLayout>
                <View
                    android:background="@color/skyBlueCardSeparator"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.assetgro.stockgro.widget.InputView
                        android:id="@+id/book_profit_delta_input_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        app:inputViewType="realNumber"
                        app:title="@string/book_profit"/>
                    <com.assetgro.stockgro.widget.InputView
                        android:id="@+id/book_profit_percentage_input_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        app:inputViewType="realNumber"
                        app:title="@string/book_profit_percentage"/>
                    <com.assetgro.stockgro.widget.PriceInputView
                        android:id="@+id/book_profit_amount_input_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        app:header="@string/book_profit_amount"
                        app:inputViewType="money"/>
                </LinearLayout>
            </LinearLayout>
            <com.assetgro.stockgro.widget.InputView
                android:id="@+id/product_input_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:inputViewType="tab"
                app:selectedTab="tab1"
                app:tab1="@string/intraday"
                app:tab2="@string/delivery"
                app:title="@string/product"/>
            <com.assetgro.stockgro.widget.InputView
                android:id="@+id/validity_input_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:inputViewType="tab"
                app:tab1="@string/day"
                app:tab2="@string/ioc"
                app:title="@string/validity"/>
        </LinearLayout>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="96dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
