<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/custom_alert_dialog_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/homeScreenCardColor"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintContainer"
            android:background="@color/fui_transparent"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/custom_dialog_title_container"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/custom_dialog_title_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="Image of the custom dialog title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="16dp"
                    android:id="@+id/custom_dialog_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/custom_dialog_title_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/custom_dialog_title_icon"
                    app:layout_constraintTop_toTopOf="@+id/custom_dialog_title_icon"
                    app:layout_goneMarginStart="0dp"
                    style="@style/RedHatBold.Black"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:textSize="12dp"
                android:textColor="#666666"
                android:id="@+id/custom_dialog_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="We are working on fixing it"
                android:fontFamily="@font/inter_400"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/custom_dialog_title_container"/>
            <TextView
                android:textSize="10dp"
                android:textColor="#212121"
                android:id="@+id/custom_dialog_subtext"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_400"
                app:layout_constraintTop_toBottomOf="@+id/custom_dialog_text"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/custom_dialog_checkbox_container"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/custom_dialog_subtext">
                <CheckBox
                    android:id="@+id/custom_dialog_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="#1b1b1b"
                    android:id="@+id/custom_dialog_checkbox_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_400"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/custom_dialog_checkbox"
                    app:layout_constraintStart_toEndOf="@+id/custom_dialog_checkbox"
                    app:layout_constraintTop_toTopOf="@+id/custom_dialog_checkbox"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/view"
                android:background="@color/white"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginVertical="24dp"
                app:layout_constraintEnd_toEndOf="@+id/custom_dialog_text"
                app:layout_constraintStart_toStartOf="@+id/custom_dialog_text"
                app:layout_constraintTop_toBottomOf="@+id/custom_dialog_checkbox_container"/>
            <com.google.android.material.button.MaterialButton
                android:textColor="@color/white"
                android:id="@+id/custom_dialog_button_positive"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="1dp"
                android:text="Yes"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:fontFamily="@font/inter_600"
                android:layout_marginStart="4dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                app:backgroundTint="#3549e3"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/custom_dialog_button_negative"
                app:layout_constraintTop_toBottomOf="@+id/view"/>
            <com.google.android.material.button.MaterialButton
                android:textColor="#3549e3"
                android:id="@+id/custom_dialog_button_negative"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="No"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:fontFamily="@font/inter_600"
                android:layout_marginEnd="4dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                app:backgroundTint="#cbd1ff"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toStartOf="@+id/custom_dialog_button_positive"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/custom_dialog_button_positive"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
