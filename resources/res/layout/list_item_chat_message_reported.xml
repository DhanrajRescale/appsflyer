<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:tag="layout/list_item_chat_message_reported_0"
    android:background="@color/stream_transparent"
    android:paddingLeft="10dp"
    android:paddingTop="8dp"
    android:paddingRight="10dp"
    android:paddingBottom="8dp"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="8dp">
    <TextView
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/chatSenderNameTextColor"
        android:id="@+id/group_chat_sender_name"
        android:tag="binding_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/inter_600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:textStyle="italic"
        android:textColor="@color/black_1A1A1A_60"
        android:id="@+id/text_group_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_reported_message_explanation"
        android:fontFamily="@font/inter_400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_chat_sender_name"/>
    <TextView
        android:textSize="11dp"
        android:textColor="@color/black_1A1A1A_40"
        android:layout_gravity="end"
        android:id="@+id/text_group_chat_time_text"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_group_chat_message"/>
    <RelativeLayout
        android:id="@+id/layout_image_group_chat_profile"
        android:visibility="gone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_group_chat_message"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/image_group_chat_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_placeholder_user"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/stockgro_logo"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="-16dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_below="@+id/image_group_chat_profile"
            android:layout_marginStart="-16dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
