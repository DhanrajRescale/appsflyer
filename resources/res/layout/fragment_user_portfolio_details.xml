<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_user_portfolio_details_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/reported_user_banner_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/white"
                android:id="@+id/reported_user_display_status"
                android:background="@drawable/rounded_red_rectangle_corner_radius_6dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_user_reported_banner"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/no_stocks_in_other_player_default_portfolio_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:layout_below="@+id/reported_user_banner_container">
            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_bull_in_locks"/>
            <TextView
                android:textSize="18dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/psst"
                android:fontFamily="@font/inter_600"
                android:textAlignment="center"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="@string/text_no_stocks_in_other_player_default_portfolio"
                android:fontFamily="@font/inter_500"
                android:textAlignment="center"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/portfolio_holdings_stocks_chart_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reported_user_banner_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.cardview.widget.CardView
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/chart_holder_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardBackgroundColor="@color/portfolioScreenCardColor"
                app:cardCornerRadius="12dp">
                <com.assetgro.stockgro.widget.StockHoldingsPieChartView
                    android:layout_gravity="center"
                    android:id="@+id/stock_holdings_pie_chart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="vertical"
                android:id="@+id/sector_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="64dp"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
