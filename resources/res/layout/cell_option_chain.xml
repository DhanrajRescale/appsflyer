<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/cell_option_chain_0"
    android:background="@color/white"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black_1A1A1A"
        android:ellipsize="end"
        android:id="@+id/option_name"
        android:tag="binding_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:fontFamily="@font/inter_500"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/ltp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black_1A1A1A"
        android:id="@+id/ltp"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_600"
        android:textAlignment="textEnd"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/option_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/option_name"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/black_1A1A1A_60"
        android:id="@+id/breakeven_title"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/breakeven"
        android:fontFamily="@font/inter_400"
        app:layout_constraintStart_toStartOf="@+id/option_name"
        app:layout_constraintTop_toBottomOf="@+id/option_name"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/black_1A1A1A"
        android:id="@+id/breakeven_value"
        android:tag="binding_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_500"
        app:layout_constraintEnd_toEndOf="@+id/breakeven_title"
        app:layout_constraintStart_toStartOf="@+id/breakeven_title"
        app:layout_constraintTop_toBottomOf="@+id/breakeven_title"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/black_1A1A1A_60"
        android:id="@+id/to_breakeven_title"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/to_breakeven"
        android:fontFamily="@font/inter_400"
        app:layout_constraintStart_toEndOf="@+id/breakeven_title"
        app:layout_constraintTop_toBottomOf="@+id/option_name"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/black_1A1A1A"
        android:id="@+id/to_breakeven_value"
        android:tag="binding_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_500"
        app:layout_constraintEnd_toEndOf="@+id/to_breakeven_title"
        app:layout_constraintStart_toStartOf="@+id/to_breakeven_title"
        app:layout_constraintTop_toBottomOf="@+id/to_breakeven_title"/>
    <com.assetgro.stockgro.widget.StockChangeInfoView
        android:id="@+id/change_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/breakeven_value"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:background="@color/black_1A1A1A"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        android:alpha="0.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breakeven_value"/>
</androidx.constraintlayout.widget.ConstraintLayout>
