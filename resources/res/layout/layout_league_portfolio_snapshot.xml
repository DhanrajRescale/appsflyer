<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/league_portfolio_snapshot"
    android:tag="layout/layout_league_portfolio_snapshot_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardBackgroundColor="@color/portfolioScreenCardColor"
    app:cardCornerRadius="12dp">
    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/portfolio_value"
                android:fontFamily="@font/inter_600"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/portfolio_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_600"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/skyBlueCardSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"/>
        <RelativeLayout
            android:id="@+id/cash_balance_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:id="@+id/cash_balance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cash_balance"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/cash_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_600"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/cash_balance_separator"
            android:background="@color/skyBlueCardSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:id="@+id/invested_amount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invested_amount"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/invested_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_600"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/skyBlueCardSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:id="@+id/profit_gained_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_profit"
                android:fontFamily="@font/inter_500"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/black_1A1A1A"
                    android:id="@+id/profit_gained"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_600"/>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/percentage_container"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:textSize="11dp"
                        android:textColor="@color/black_1A1A1A"
                        android:id="@+id/change_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_600"/>
                    <ImageView
                        android:id="@+id/change_type_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        app:srcCompat="@drawable/ic_stock_up_arrow"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/transaction_charges_separator"
            android:background="@color/skyBlueCardSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"/>
        <RelativeLayout
            android:id="@+id/transaction_charges_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:id="@+id/transaction_charges_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/transaction_charges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_600"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
