<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:tag="layout/layout_portfolio_history_details_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:weightSum="3"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/view">
    <LinearLayout
        android:gravity="left"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A_40"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_quantity"
            android:fontFamily="@font/inter_500"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A"
            android:layout_gravity="center_horizontal"
            android:id="@+id/order_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:fontFamily="@font/inter_600"/>
    </LinearLayout>
    <View
        android:id="@+id/separator"
        android:background="@color/lightColorSeparator"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:gravity="left"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A_40"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_order_price"
            android:fontFamily="@font/inter_500"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A"
            android:layout_gravity="center_horizontal"
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_600"/>
    </LinearLayout>
    <View
        android:background="@color/lightColorSeparator"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:gravity="left"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A_40"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_total_amount"
            android:fontFamily="@font/inter_500"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A"
            android:layout_gravity="center_horizontal"
            android:id="@+id/order_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_600"/>
    </LinearLayout>
</LinearLayout>
