<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_content_mission_task_completed_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/user_display_image_container"
        android:background="@drawable/image_circle_yellow_view"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="56dp"
        app:layout_constraintBottom_toTopOf="@+id/congratulatory_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/user_display_image"
            android:tag="binding_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black_1A1A1A"
        android:id="@+id/congratulatory_message"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_600"
        app:layout_constraintBottom_toTopOf="@+id/task_accomplished_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_display_image_container"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black_3A3A3A"
        android:id="@+id/task_accomplished_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/mission_accomplished"
        android:fontFamily="@font/inter_400"
        app:layout_constraintBottom_toTopOf="@+id/container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/congratulatory_message"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/orange_FF7E36"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_accomplished_message">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="60dp"
            android:paddingTop="20dp"
            android:paddingRight="60dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="60dp"
            android:paddingVertical="20dp">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/white_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you_won"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/white"
                android:tag="binding_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_700"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <ImageView
        android:id="@+id/reward_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_bonus_new"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@+id/container"
        app:layout_constraintEnd_toEndOf="@+id/container"
        app:layout_constraintStart_toStartOf="@+id/container"
        app:layout_constraintTop_toTopOf="@+id/container"/>
</androidx.constraintlayout.widget.ConstraintLayout>
