<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/layout_portfolio_holdings_stocks_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black_1A1A1A"
        android:id="@+id/asset_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stocks"
        android:fontFamily="@font/inter_600"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/flip_chart_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/asset_text"
        app:layout_constraintRight_toLeftOf="@+id/filter_stock_holdings"
        app:layout_constraintTop_toTopOf="@+id/asset_text"
        app:srcCompat="@drawable/ic_chart"/>
    <ImageView
        android:id="@+id/filter_stock_holdings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/asset_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/asset_text"
        app:srcCompat="@drawable/ic_filter_list"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/portfolio_holdings_stocks_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/asset_text">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stock_holdings_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/portfolio_holdings_stocks_chart_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/asset_text">
        <androidx.cardview.widget.CardView
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/chart_holder_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/portfolioScreenCardColor"
            app:cardCornerRadius="12dp">
            <com.assetgro.stockgro.widget.StockHoldingsPieChartView
                android:layout_gravity="center"
                android:id="@+id/stock_holdings_pie_chart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/sector_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:tabBackground="@drawable/tab_light_theme_selector"
                app:tabIndicator="@android:color/transparent"
                app:tabMinWidth="150dp"
                app:tabMode="auto"
                app:tabRippleColor="@android:color/transparent"
                app:tabSelectedTextColor="@color/lightThemeSelectedTabTitleColor"
                app:tabTextAppearance="@style/StockGroDefaultTabStyle"
                app:tabTextColor="@color/lightThemeUnSelectedTabTitleColor"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sector_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/pager"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tab_layout"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
