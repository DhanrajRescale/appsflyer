<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:tag="layout/layout_portfolio_value_details_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/view">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A_40"
            android:id="@+id/invested_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_invested_amount"
            android:fontFamily="@font/inter_500"/>
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black_1A1A1A"
            android:id="@+id/invested_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_600"/>
    </LinearLayout>
    <View
        android:id="@+id/separator"
        android:background="@color/lightColorSeparator"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A_40"
            android:id="@+id/profit_gained_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_profit"
            android:fontFamily="@font/inter_500"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/profit_gained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_600"/>
            <TextView
                android:textSize="11dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/change_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_500"
                android:layout_marginStart="4dp"/>
            <ImageView
                android:layout_gravity="bottom"
                android:id="@+id/change_type_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
