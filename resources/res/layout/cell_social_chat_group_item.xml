<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_root"
    android:tag="layout/cell_social_chat_group_item_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_group_channel_list_cover"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="8dp"
        android:textColor="@color/white"
        android:id="@+id/subscription_package_name"
        android:background="@drawable/subscription_tag_advance"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_500"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_group_channel_list_cover"
        app:layout_constraintEnd_toEndOf="@+id/image_group_channel_list_cover"
        app:layout_constraintStart_toStartOf="@+id/image_group_channel_list_cover"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/chatMessageListSenderNameColor"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/text_group_channel_list_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxWidth="200dp"
        android:maxLines="1"
        android:singleLine="true"
        android:fontFamily="@font/inter_600"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintLeft_toRightOf="@+id/image_group_channel_list_cover"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/container_group_channel_list_message"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toStartOf="@+id/text_group_channel_list_topic"
        app:layout_constraintTop_toBottomOf="@+id/text_group_channel_list_topic">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/chatMessageListLastMsgColor"
            android:ellipsize="end"
            android:id="@+id/text_group_channel_list_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_end_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_pin"
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_pinned_chat"
            android:layout_marginEnd="4dp"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_mute"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_mute_chat"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/text_group_channel_list_unread_count"
            android:background="@drawable/background_chat_unread_count"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:minWidth="16dp"
            android:maxLines="1"
            android:paddingHorizontal="3dp"/>
    </LinearLayout>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/text_group_channel_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:fontFamily="@font/inter_600"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/container_group_channel_list_message"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/iv_separator"
        android:background="@color/chatSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/click_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
