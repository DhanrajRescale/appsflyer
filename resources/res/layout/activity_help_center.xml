<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/activity_help_center_0"
    android:background="@color/screenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/app_bar_layout"
        android:background="@android:color/transparent"
        android:visibility="visible"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:theme="@style/ToolbarMenuStyle"
            android:id="@+id/toolbar"
            android:background="@drawable/collapsing_app_bar_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collapsed_toolbar_height"
            android:minHeight="@dimen/collapsed_toolbar_height"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:elevation="0dp"
            app:layout_collapseMode="pin"
            app:navigationIcon="@drawable/ic_back"
            app:titleTextColor="@color/toolbarTitleColor"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_app_bar_layout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/data_container"
            android:tag="binding_1"
            android:background="@color/screenBackground"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/issue_description_layout"
                android:background="@drawable/background_chat_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/black_1A1A1A"
                        android:id="@+id/issue_description_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/text_tell_us_about_issue"
                        android:fontFamily="@font/inter_400"/>
                    <EditText
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:gravity="top"
                        android:id="@+id/issue_desc_edit_text"
                        android:background="@drawable/layout_edittext_background"
                        android:paddingLeft="14dp"
                        android:paddingTop="14dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:minHeight="200dp"
                        android:layout_below="@+id/issue_description_label"
                        android:inputType="textMultiLine"
                        android:fontFamily="@font/inter_500"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="14dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/inputViewErrorColor"
                        android:layout_gravity="end"
                        android:id="@+id/issue_desc_error_text"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/text_required"
                        android:fontFamily="@font/inter_500"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="16dp"/>
                </LinearLayout>
            </RelativeLayout>
            <include
                android:id="@+id/layout_proof_upload_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/issue_description_layout"
                layout="@layout/layout_proof_upload_view"/>
            <RelativeLayout
                android:id="@+id/email_id_layout"
                android:background="@drawable/background_chat_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_proof_upload_view">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/black_1A1A1A"
                        android:id="@+id/email_id_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/text_enter_email_id"
                        android:fontFamily="@font/inter_400"/>
                    <EditText
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:id="@+id/email_id_edit_text"
                        android:background="@drawable/layout_edittext_background"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="4dp"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/inter_500"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/inputViewErrorColor"
                        android:layout_gravity="end"
                        android:id="@+id/email_id_error_text"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/text_required"
                        android:fontFamily="@font/inter_500"
                        android:textAlignment="textEnd"
                        android:layout_marginEnd="16dp"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/mobile_no_layout"
                android:background="@drawable/background_chat_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_id_layout">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/black_1A1A1A"
                        android:id="@+id/mobile_no_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/text_reg_mobile_no"
                        android:fontFamily="@font/inter_400"/>
                    <EditText
                        android:textSize="14dp"
                        android:textColor="@color/black"
                        android:id="@+id/mobile_no_edit_text"
                        android:background="@drawable/layout_edittext_background"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="4dp"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/inter_500"/>
                </LinearLayout>
            </RelativeLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/send_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:layout_margin="16dp"
                android:text="@string/send"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/mobile_no_layout"
                style="@style/primaryButton"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
