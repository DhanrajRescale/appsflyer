<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/activity_league_pre_joining_0"
    android:background="@color/screenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/app_bar_layout"
        android:background="@android:color/transparent"
        android:visibility="visible"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:theme="@style/ToolbarMenuStyle"
            android:id="@+id/toolbar"
            android:background="@drawable/collapsing_app_bar_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collapsed_toolbar_height"
            android:minHeight="@dimen/collapsed_toolbar_height"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:elevation="0dp"
            app:layout_collapseMode="pin"
            app:navigationIcon="@drawable/ic_back"
            app:titleTextColor="@color/toolbarTitleColor"/>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="56dp"
            android:layout_centerHorizontal="true"/>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/league_nested_scroll_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/next_container">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/data_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.compose.ui.platform.ComposeView
                    android:id="@+id/compose_league_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.assetgro.stockgro.widget.BorderDrawableButton
                    android:id="@+id/customButton2"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginTop="16dp"
                    android:elevation="1dp"
                    android:paddingHorizontal="8dp"
                    app:bdb_border_color="#4a20e6"
                    app:bdb_color="#ffffff"
                    app:bdb_text="@string/share_with_friends"
                    app:bdb_text_color="#4a20e6"
                    app:layout_constraintEnd_toEndOf="@+id/my_league_header_container"
                    app:layout_constraintStart_toEndOf="@+id/customButton"
                    app:layout_constraintTop_toTopOf="@+id/customButton"
                    app:layout_constraintWidth_percent="0.45"
                    app:textIcon="@drawable/ic_prepzone_view_portfolio"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/black_1A1A1A"
                    android:layout_gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prize_distribution_text"
                    android:fontFamily="@font/inter_600"
                    android:layout_marginStart="16dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="@color/arenaScreenCardColor"
                    app:cardCornerRadius="12dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.legacy.widget.Space
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="16dp"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:paddingLeft="56dp"
                                android:paddingTop="16dp"
                                android:paddingRight="56dp"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="56dp">
                                <TextView
                                    android:textSize="12dp"
                                    android:textColor="@color/black_1A1A1A"
                                    android:gravity="start"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/rank"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_500"/>
                                <TextView
                                    android:textSize="12dp"
                                    android:textColor="@color/black_1A1A1A"
                                    android:gravity="end"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/prize_without_colon"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_500"/>
                            </LinearLayout>
                            <androidx.legacy.widget.Space
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="16dp"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:orientation="vertical"
                                android:id="@+id/prize_distribution_recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:nestedScrollingEnabled="false"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                            <androidx.legacy.widget.Space
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="16dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:tag="binding_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include
                        android:id="@+id/cell_maintenance_view"
                        android:visibility="gone"
                        layout="@layout/cell_maintenance_view"/>
                </RelativeLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/game_rules_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/black_1A1A1A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/game_rules"
                        android:fontFamily="@font/inter_600"
                        android:layout_marginStart="16dp"/>
                    <ImageView
                        android:id="@+id/game_rule_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:drawablePadding="2dp"
                        android:rotation="-90"
                        android:layout_marginStart="4dp"
                        app:srcCompat="@drawable/ic_down_pointed"
                        app:tint="@color/black_1A1A1A"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/game_rule_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardCornerRadius="12dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/game_rule_container"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/next_container"
            android:background="@color/white"
            android:paddingTop="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <com.assetgro.stockgro.widget.ProgressBarWithCounter
                android:id="@+id/custom_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/grey_A0A0A0"
                android:id="@+id/seats_left_remaining_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/inter_400"
                android:layout_marginEnd="18dp"
                app:drawableStartCompat="@drawable/ic_group_icon"
                app:layout_constraintEnd_toEndOf="@+id/custom_progress_bar"
                app:layout_constraintTop_toBottomOf="@+id/custom_progress_bar"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/payment_confirmation_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seats_left_remaining_text">
                <CheckBox
                    android:id="@+id/tnc_check_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginStart="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/SGCheckBoxStyle"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/black_1A1A1A"
                    android:id="@+id/tnc_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/i_accept_all_the_terms_conditions_for_this_game"
                    android:fontFamily="@font/inter_400"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tnc_check_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tnc_check_button"
                    app:layout_constraintTop_toTopOf="@+id/tnc_check_button"/>
                <com.assetgro.stockgro.widget.SwipeToJoinButton
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="24dp"
                    android:text="Swipe to join"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tnc_label"
                    style="@style/primaryButton"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/compose_portfolio_state"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/payment_confirmation_container"/>
            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/compose_maintainence_state"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/payment_confirmation_container"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
