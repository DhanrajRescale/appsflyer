<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/loginSocialLayout"
    android:tag="layout/social_merge_button_layout_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp">
            <RelativeLayout
                android:id="@+id/facebook_auth_container"
                android:background="@color/color_facebook"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <ImageView
                    android:id="@+id/facebook_icon"
                    android:background="@drawable/rounded_color_white_rectangle_corner_radius_4dp"
                    android:padding="4dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/ic_facebook_logo"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/socialFacebookButton"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_connect_with_facebook"
                    android:layout_centerVertical="true"
                    android:textAllCaps="false"
                    android:fontFamily="@font/inter_600"
                    android:layout_toEndOf="@+id/facebook_icon"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp">
            <RelativeLayout
                android:id="@+id/linkedin_auth_container"
                android:background="@color/color_linkedin"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <ImageView
                    android:id="@+id/linkedin_icon"
                    android:background="@drawable/rounded_color_white_rectangle_corner_radius_4dp"
                    android:padding="4dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_linked_in_logo"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/socialLinkedInButton"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_connect_with_linkedin"
                    android:layout_centerVertical="true"
                    android:textAllCaps="false"
                    android:fontFamily="@font/inter_600"
                    android:layout_marginEnd="32dp"
                    android:layout_toEndOf="@+id/linkedin_icon"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>
