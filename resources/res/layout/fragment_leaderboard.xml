<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/fragment_leaderboard_0"
    android:background="@drawable/rounded_color_primary_rectangle_corner_radius_8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">
    <RelativeLayout
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:textColor="@color/black_1A1A1A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IIM Bangalore \10Champs"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter_600"/>
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_champs"/>
    </RelativeLayout>
    <com.assetgro.stockgro.widget.ArrowSlider
        android:id="@+id/arrow_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:tag="binding_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <include layout="@layout/cell_champs"/>
        <include layout="@layout/cell_champs"/>
        <include layout="@layout/cell_champs"/>
        <include layout="@layout/cell_champs"/>
    </LinearLayout>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="32dp"
        android:text="@string/view_all"
        android:fontFamily="@font/inter_600"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_view"/>
</LinearLayout>
