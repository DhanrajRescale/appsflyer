<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/activity_ria_profile_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/compose_view"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/ria_app_bar_layout"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="exitUntilCollapsed|scroll"
                app:titleEnabled="false">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <ImageView
                        android:id="@+id/gradient_container_one"
                        android:background="@drawable/collapsing_app_bar_background"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toTopOf="@+id/gradient_container_two"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_weight="0.5"/>
                    <View
                        android:id="@+id/gradient_container_two"
                        android:background="@drawable/gradient_blue_to_light_blue"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toTopOf="@+id/gradient_container_three"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/gradient_container_one"
                        app:layout_constraintVertical_weight="0.3"/>
                    <View
                        android:id="@+id/gradient_container_three"
                        android:background="@drawable/gradient_blue_to_white"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/gradient_container_two"
                        app:layout_constraintVertical_weight="0.2"/>
                    <ImageView
                        android:id="@+id/gradient_container_mask"
                        android:background="@drawable/ria_mask_group_v2"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:elevation="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_weight="0.5"/>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/overflow_menu_collapsable"
                        android:background="#808080"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginEnd="28dp"
                        android:elevation="10dp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CircleImageView">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:src="@drawable/ic_ria_three_dots"
                            app:tint="#808080"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/overflow_share_collapsable"
                        android:background="#808080"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="16dp"
                        android:elevation="10dp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toStartOf="@+id/overflow_menu_collapsable"
                        app:layout_constraintTop_toTopOf="@+id/overflow_menu_collapsable"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CircleImageView">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:src="@drawable/ic_ria_share"/>
                    </com.google.android.material.card.MaterialCardView>
                    <ImageView
                        android:id="@+id/back_arrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="28dp"
                        android:src="@drawable/ic_ria_back"
                        android:layout_marginStart="16dp"
                        android:elevation="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <FrameLayout
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/ria_display_pic_collapsable_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CircleImageView"
                            app:strokeColor="#4caf50"
                            app:strokeWidth="5dp">
                            <ImageView
                                android:id="@+id/ria_display_pic_collapsable"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_bull_selfie"/>
                        </com.google.android.material.card.MaterialCardView>
                        <ImageView
                            android:layout_gravity="end|bottom"
                            android:id="@+id/is_sebi_verified_tag"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginEnd="10dp"
                            android:elevation="8dp"/>
                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:background="@drawable/collapsing_app_bar_background"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:elevation="0dp"
                    app:layout_collapseMode="pin">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/toolbar_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/toolbar_back"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_ria_back"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/ria_display_pic_container"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/toolbar_back"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CircleImageView"
                            app:strokeColor="#4caf50"
                            app:strokeWidth="1dp">
                            <ImageView
                                android:id="@+id/ria_display_pic"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_bull_selfie"/>
                        </com.google.android.material.card.MaterialCardView>
                        <TextView
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:ellipsize="end"
                            android:id="@+id/ria_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:fontFamily="@font/inter_400"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="4dp"
                            app:layout_constraintBottom_toBottomOf="@+id/ria_display_pic_container"
                            app:layout_constraintEnd_toStartOf="@+id/overflow_share"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintStart_toEndOf="@+id/ria_display_pic_container"
                            app:layout_constraintTop_toBottomOf="@+id/ria_display_pic_container"
                            app:layout_constraintTop_toTopOf="@+id/ria_display_pic_container"
                            app:layout_constraintVertical_bias="0.5"/>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/overflow_menu"
                            android:background="#808080"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="28dp"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toBottomOf="@+id/ria_name"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/ria_name"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CircleImageView">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp"
                                android:src="@drawable/ic_ria_three_dots"
                                app:tint="#808080"/>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/overflow_share"
                            android:background="#808080"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="16dp"
                            app:cardElevation="0dp"
                            app:layout_constraintBottom_toBottomOf="@+id/overflow_menu"
                            app:layout_constraintEnd_toStartOf="@+id/overflow_menu"
                            app:layout_constraintTop_toTopOf="@+id/overflow_menu"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CircleImageView">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp"
                                android:src="@drawable/ic_ria_share"/>
                        </com.google.android.material.card.MaterialCardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/view_ria_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <View
                        android:background="@drawable/gradient_white_to_off_white"
                        android:layout_width="0dp"
                        android:layout_height="256dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="28dp"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:id="@+id/ria_name_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxLines="1"
                        android:fontFamily="@font/public_sans_700"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toStartOf="@+id/ll_follow_unblock_button"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="28dp"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:id="@+id/ria_name_second"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:fontFamily="@font/public_sans_400"
                        android:layout_marginStart="4dp"
                        app:layout_constraintBottom_toBottomOf="@+id/ria_name_first"
                        app:layout_constraintEnd_toStartOf="@+id/ll_follow_unblock_button"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@+id/ria_name_first"
                        app:layout_constraintTop_toTopOf="@+id/ria_name_first"
                        app:layout_goneMarginEnd="16dp"/>
                    <LinearLayout
                        android:id="@+id/ll_follow_unblock_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/ria_name_first"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/ria_name_first">
                        <com.google.android.material.button.MaterialButton
                            android:textColor="@color/primaryButtonColor"
                            android:id="@+id/follow_following_button"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:text="+ Follow"
                            android:insetLeft="8dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/figtree_600"
                            android:letterSpacing="-0.03"
                            app:cornerRadius="18dp"
                            app:iconGravity="textStart"
                            app:iconPadding="2dp"
                            app:iconSize="12dp"
                            app:iconTintMode="multiply"
                            app:layout_constraintBottom_toBottomOf="@+id/ria_name_first"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/ria_name_first"
                            app:rippleColor="@color/primaryButtonColor_70"
                            app:strokeColor="#4a20e6"
                            app:strokeWidth="2dp"/>
                        <com.google.android.material.button.MaterialButton
                            android:textColor="@android:color/white"
                            android:id="@+id/unblock_button"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="33dp"
                            android:text="@string/text_unblock"
                            android:insetLeft="8dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/figtree_600"
                            android:letterSpacing="-0.03"
                            app:backgroundTint="@color/primaryButtonColor"
                            app:cornerRadius="18dp"
                            app:layout_constraintBottom_toBottomOf="@+id/ria_name_first"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/ria_name_first"
                            app:rippleColor="@color/white"/>
                    </LinearLayout>
                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/ria_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="user_name,ria_description,ria_basic_info,ria_outline,expertise,expert_trade_view_widget"/>
                    <TextView
                        android:textSize="14dp"
                        android:id="@+id/user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:fontFamily="@font/public_sans_400"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ria_name_first"/>
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:id="@+id/ria_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/public_sans_400"
                        android:layout_marginHorizontal="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/user_name"/>
                    <com.assetgro.stockgro.feature_social.widget.RiaBasicInfoWidget
                        android:id="@+id/ria_basic_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginHorizontal="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ria_description"/>
                    <com.assetgro.stockgro.feature_social.widget.RiaOutlineWidget
                        android:id="@+id/ria_outline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ria_basic_info"/>
                    <com.assetgro.stockgro.feature_social.widget.RiaExpertiseWidget
                        android:id="@+id/expertise"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginHorizontal="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ria_outline"/>
                    <com.assetgro.stockgro.feature_social.widget.ExpertTradeViewWidget
                        android:id="@+id/expert_trade_view_widget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginHorizontal="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/expertise"/>
                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/expert_trade_view_widget"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/block_parent_layout"
                        android:background="#f2f2f2"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ria_name_first">
                        <ImageView
                            android:id="@+id/error_image"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="40dp"
                            android:scaleType="centerInside"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:id="@+id/error_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:fontFamily="@font/public_sans_400"
                            android:textAlignment="center"
                            android:layout_marginHorizontal="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/error_image"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.compose.ui.platform.ComposeView
                    android:id="@+id/compose_view_ria_socials"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/view_ria_info"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/footer_container"
                    android:background="@color/white"
                    android:paddingTop="32dp"
                    android:paddingBottom="24dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/compose_view_ria_socials">
                    <TextView
                        android:textSize="20dp"
                        android:textColor="#a3a3a3"
                        android:id="@+id/footer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/be_financially_free_with_stockgro"
                        android:fontFamily="@font/figtree_regular"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/footer_icon"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <ImageView
                        android:id="@+id/footer_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_marginStart="4dp"
                        app:layout_constraintBottom_toBottomOf="@+id/footer_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/footer_text"
                        app:layout_constraintTop_toTopOf="@+id/footer_text"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
