<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/portfolio_data_league"
    android:tag="layout/layout_portfolio_data_league_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardBackgroundColor="@color/portfolioScreenCardColor"
    app:cardCornerRadius="12dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/view">
    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:id="@+id/cash_balance_league_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cash_balance"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/cash_balance_league"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_600"/>
        </LinearLayout>
        <View
            android:id="@+id/separator"
            android:background="@color/lightColorSeparator"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pending_order_amount"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/pending_order_amount_league"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_600"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
