<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/fragment_portfolio_0"
    android:background="@color/screenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/app_bar_layout"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@drawable/collapsing_app_bar_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collapsed_toolbar_height"
            android:minHeight="@dimen/collapsed_toolbar_height"
            android:elevation="0dp"
            app:layout_collapseMode="pin"
            app:navigationIcon="@drawable/ic_menu_new"
            app:titleTextColor="@color/toolbarTitleColor"
            style="@style/CollapsedAppBar"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/compose_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:elevation="4dp"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.core.widget.NestedScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/model_portfolios_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/black_1A1A1A"
                        android:id="@+id/model_portfolios_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_600"
                        android:layout_marginStart="16dp"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/grey_696969"
                        android:id="@+id/model_portfolios_sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/inter_400"
                        android:layout_marginStart="16dp"/>
                    <com.assetgro.stockgro.widget.WrapContentViewPager
                        android:id="@+id/model_portfolio_view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"/>
                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/model_portfolios_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="18dp"
                        android:elevation="8dp"
                        app:ci_drawable="@drawable/dark_indicator_selected_v2"
                        app:ci_drawable_unselected="@drawable/dark_indicator_unselected_v2"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/league_portfolios_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="30dp">
                    <TextView
                        android:textSize="16dp"
                        android:textColor="@color/black_1A1A1A"
                        android:id="@+id/league_portfolios_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_600"
                        android:layout_marginStart="16dp"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/grey_696969"
                        android:id="@+id/league_portfolios_sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/inter_400"
                        android:layout_marginStart="16dp"/>
                    <com.assetgro.stockgro.widget.WrapContentViewPager
                        android:id="@+id/league_portfolio_view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"/>
                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/league_portfolios_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="18dp"
                        android:elevation="8dp"
                        app:ci_drawable="@drawable/dark_indicator_selected_v2"
                        app:ci_drawable_unselected="@drawable/dark_indicator_unselected_v2"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
