<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/data_container"
    android:tag="layout/layout_transfer_pending_0"
    android:background="@color/screenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/default_card_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                app:layout_constraintDimensionRatio="2"
                app:srcCompat="@drawable/ic_transaction_pending"/>
            <TextView
                android:textSize="20dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/text_confirmation_pending"
                android:fontFamily="@font/inter_600"/>
            <TextView
                android:textSize="16dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/text_request_placed"
                android:fontFamily="@font/inter_500"
                android:textAlignment="center"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/rounded_sky_blue_rectangle_corner_radius_16dp"
                android:paddingTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/black_1A1A1A"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/withdrawal_mode_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/text_transfer"
                    android:fontFamily="@font/inter_600"/>
                <View
                    android:background="@color/skyBlueCardSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/black_1A1A1A"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/text_transaction_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/text_transaction_id"
                    android:fontFamily="@font/inter_500"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/black_1A1A1A"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/transaction_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:maxLines="3"
                    android:fontFamily="@font/inter_500"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/go_to_wallet"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:text="@string/text_go_to_wallet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/primaryButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
