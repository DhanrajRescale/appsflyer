<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:tag="layout/cell_all_top_portfolio_0"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginHorizontal="2dp"
    android:paddingHorizontal="16dp"
    app:cardBackgroundColor="@color/homeScreenCardColor"
    app:cardCornerRadius="12dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingLeft="14dp"
        android:paddingTop="8dp"
        android:paddingRight="14dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="14dp"
        android:paddingVertical="8dp">
        <com.assetgro.stockgro.widget.CrownImageView
            android:id="@+id/crown_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:crownLocation="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A"
            android:ellipsize="end"
            android:id="@+id/name_top_portfolio_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:maxLines="2"
            android:fontFamily="@font/inter_500"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/crown_image_view"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.assetgro.stockgro.widget.StockChangeInfoView
            android:id="@+id/stock_change_info_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/crown_image_view"
            app:layout_constraintTop_toBottomOf="@+id/name_top_portfolio_user"/>
        <com.google.android.material.button.MaterialButton
            android:textSize="10dp"
            android:id="@+id/view"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:text="@string/view"
            android:layout_marginEnd="4dp"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/secondaryButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
