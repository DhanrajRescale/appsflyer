<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/bottom_sheet_payment_withdrawal_otp_verify_0"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <androidx.constraintlayout.widget.Group
        android:tag="binding_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="enter_otp_label,otp_sent_on_number_message,timer,resend_otp,entered_otp,attempt_left_message,action_button"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/back_to_wallet_container"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="illustration,error_message,back_to_wallet"/>
    <TextView
        android:textSize="20dp"
        android:id="@+id/enter_otp_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/verify_payment_otp"
        android:fontFamily="@font/inter_600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:id="@+id/otp_sent_on_number_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/we_just_sent_you_on_your_mobile_number"
        android:fontFamily="@font/inter_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_otp_label"/>
    <TextView
        android:textColor="@color/timerColor"
        android:id="@+id/timer"
        android:tag="binding_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_600"
        app:layout_constraintBottom_toBottomOf="@+id/resend_otp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/resend_otp"/>
    <TextView
        android:textSize="14dp"
        android:id="@+id/resend_otp"
        android:tag="binding_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/resend_otp"
        android:fontFamily="@font/inter_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_sent_on_number_message"/>
    <com.chaos.view.PinView
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black_1A1A1A"
        android:id="@+id/entered_otp"
        android:padding="4dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:itemBackground="@color/secondaryButtonBackgroundColor"
        android:inputType="numberPassword"
        app:cursorColor="#1f3549e3"
        app:cursorWidth="2dp"
        app:hideLineWhenFilled="true"
        app:itemCount="6"
        app:itemHeight="48dp"
        app:itemRadius="16dp"
        app:itemSpacing="10dp"
        app:itemWidth="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resend_otp"
        app:lineColor="@android:color/transparent"
        app:lineWidth="1dp"
        app:viewType="surfaceView"/>
    <TextView
        android:textSize="12dp"
        android:id="@+id/attempt_left_message"
        android:tag="binding_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entered_otp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/action_button"
        android:tag="binding_6"
        android:layout_width="0dp"
        android:layout_marginTop="64dp"
        android:text="@string/verify"
        android:layout_weight="1"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entered_otp"
        style="@style/primaryButton"/>
    <ImageView
        android:id="@+id/illustration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_payment_failed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="14dp"
        android:id="@+id/error_message"
        android:tag="binding_7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/illustration"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_to_wallet"
        android:layout_width="0dp"
        android:layout_marginTop="24dp"
        android:text="@string/back_to_account"
        android:layout_weight="1"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_message"
        style="@style/primaryButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
