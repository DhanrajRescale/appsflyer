<?xml version="1.0" encoding="utf-8"?>
<com.assetgro.stockgro.widget.TouchDetectableScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/social_search_scroll_view"
    android:tag="layout/layout_market_search_results_0"
    android:background="@color/screenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/search_option_layout_container"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/search_option_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/chip_all"
                    android:background="@drawable/background_social_search_chip_selected"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_all"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_500"
                    android:textAlignment="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/chip_stocks"
                    android:background="@drawable/background_social_search_chip_unselected"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stocks"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_500"
                    android:textAlignment="center"
                    android:layout_marginStart="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/chip_options"
                    android:background="@drawable/background_social_search_chip_unselected"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_fno"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_500"
                    android:textAlignment="center"
                    android:layout_marginStart="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/stock_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="#f5ecff"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#1a7515d5"
            app:strokeWidth="1dp">
            <TextView
                android:textSize="10dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stocks_disclaimer"
                android:drawablePadding="4dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                app:drawableStartCompat="@drawable/ic_sg_info_12dp"/>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/bottom_screen_section"
            android:background="@color/screenBackground"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/search_result_first_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <TextView
                    android:textSize="14dp"
                    android:id="@+id/label_first_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/stocks"
                    android:fontFamily="@font/inter_600"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/search_result_first_data_container"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/search_result_first_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center"
                        android:id="@+id/view_more_first_search_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/text_view_more"
                        android:fontFamily="@font/inter_600"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/no_search_result_first_container"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_social_search_no_results"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/social_text_color"
                    android:gravity="center"
                    android:id="@+id/no_results_in_category_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="32dp"
                    android:text="@string/no_contact_search_results_text"
                    android:fontFamily="@font/inter_500"
                    android:layout_marginHorizontal="32dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/search_result_second_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_result_first_container">
                <TextView
                    android:textSize="14dp"
                    android:id="@+id/label_second_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/text_fno"
                    android:fontFamily="@font/inter_600"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/search_result_second_data_container"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/search_result_second_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/label_recent"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center"
                        android:id="@+id/view_more_second_search_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/text_view_more"
                        android:fontFamily="@font/inter_600"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/no_search_result_second_container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_social_search_no_results"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/social_text_color"
                        android:gravity="center"
                        android:id="@+id/text_no_data_second_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="32dp"
                        android:text="@string/no_contact_search_results_text"
                        android:fontFamily="@font/inter_500"
                        android:layout_marginHorizontal="32dp"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        </LinearLayout>
    </LinearLayout>
</com.assetgro.stockgro.widget.TouchDetectableScrollView>
