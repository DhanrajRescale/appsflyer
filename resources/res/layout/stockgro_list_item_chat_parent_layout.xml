<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/stockgro_list_item_chat_parent_layout_0"
    android:padding="8dp"
    android:paddingLeft="12dp"
    android:paddingTop="8dp"
    android:paddingRight="12dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:textSize="11dp"
        android:textColor="@color/purple_A59BCC"
        android:id="@+id/text_group_chat_nickname"
        android:tag="binding_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/black_1A1A1A_60"
        android:ellipsize="end"
        android:id="@+id/text_group_chat_message"
        android:tag="binding_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="3"
        android:fontFamily="@font/inter_400"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/thumbnail_container"
        app:layout_constraintStart_toStartOf="@+id/text_group_chat_nickname"
        app:layout_constraintTop_toBottomOf="@+id/text_group_chat_nickname"
        app:layout_goneMarginEnd="8dp"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/grey_827F92"
        android:ellipsize="end"
        android:id="@+id/text_group_chat_media_label"
        android:tag="binding_3"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:drawablePadding="4dp"
        android:fontFamily="@font/inter_500"
        app:layout_constraintEnd_toStartOf="@+id/thumbnail_container"
        app:layout_constraintStart_toStartOf="@+id/text_group_chat_nickname"
        app:layout_constraintTop_toBottomOf="@+id/text_group_chat_nickname"/>
    <ImageView
        android:id="@+id/sticker"
        android:background="@color/stream_transparent"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/text_group_chat_nickname"
        app:layout_constraintTop_toBottomOf="@+id/text_group_chat_nickname"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/thumbnail_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/stream_transparent"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/thumbnail"
            android:tag="binding_4"
            android:background="@color/stream_transparent"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"/>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
