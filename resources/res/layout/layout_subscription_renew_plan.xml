<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/arena_tutorial_container"
    android:visibility="visible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginHorizontal="16dp"
    app:cardBackgroundColor="@color/screenBackground"
    app:cardCornerRadius="16dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="16dp"
        android:layout_width="316dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/card_icon"
            android:layout_width="0dp"
            android:layout_height="124dp"
            android:scaleType="fitEnd"
            app:layout_constraintBottom_toBottomOf="@+id/plan_expiry_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.45"
            app:srcCompat="0x7f080477"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/black_1A1A1A"
            android:id="@+id/dont_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/don_t_get"
            android:textAllCaps="true"
            android:fontFamily="@font/inter_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/card_icon"/>
        <TextView
            android:textSize="22dp"
            android:textColor="#4214e3"
            android:id="@+id/interrupted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interrupted"
            android:textAllCaps="true"
            android:fontFamily="@font/inter_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dont_get"/>
        <TextView
            android:textSize="10dp"
            android:id="@+id/plan_expiry_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_500"
            app:layout_constraintBottom_toTopOf="@+id/secondary_action"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/interrupted"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintWidth_percent="0.5"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/secondary_action"
            android:layout_width="0dp"
            android:layout_marginTop="16dp"
            android:text="@string/later"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/primary_action"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plan_expiry_text"
            style="@style/secondaryButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/primary_action"
            android:layout_width="0dp"
            android:text="@string/renew"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/secondary_action"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/secondary_action"
            app:layout_constraintTop_toTopOf="@+id/secondary_action"
            style="@style/primaryButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
