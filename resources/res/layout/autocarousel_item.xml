<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/carousel_v1_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/carousel_body_portrait"
        android:layout_width="596dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/carousel_portrait_0_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/carousel_portrait_1_container"
                android:layout_toStartOf="@+id/carousel_portrait_1_container">
                <ImageView
                    android:id="@+id/carousel_portrait_0_image"
                    android:layout_width="192dp"
                    android:layout_height="192dp"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"/>
                <RelativeLayout
                    android:background="#b2ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignLeft="@+id/carousel_portrait_0_image"
                    android:layout_alignRight="@+id/carousel_portrait_0_image"
                    android:layout_alignBottom="@+id/carousel_portrait_0_image"
                    android:layout_alignStart="@+id/carousel_portrait_0_image"
                    android:layout_alignEnd="@+id/carousel_portrait_0_image">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#1c1c1c"
                        android:ellipsize="end"
                        android:id="@+id/carousel_portrait_0_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:maxLines="1"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:background="#bfffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/carousel_portrait_0_image"
                    android:layout_alignTop="@+id/carousel_portrait_0_image"
                    android:layout_alignRight="@+id/carousel_portrait_0_image"
                    android:layout_alignBottom="@+id/carousel_portrait_0_image"
                    android:layout_alignStart="@+id/carousel_portrait_0_image"
                    android:layout_alignEnd="@+id/carousel_portrait_0_image"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/carousel_portrait_2_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/carousel_portrait_1_container"
                android:layout_toEndOf="@+id/carousel_portrait_1_container">
                <ImageView
                    android:id="@+id/carousel_portrait_2_image"
                    android:layout_width="192dp"
                    android:layout_height="192dp"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"/>
                <RelativeLayout
                    android:background="#b2ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignLeft="@+id/carousel_portrait_2_image"
                    android:layout_alignRight="@+id/carousel_portrait_2_image"
                    android:layout_alignBottom="@+id/carousel_portrait_2_image"
                    android:layout_alignStart="@+id/carousel_portrait_2_image"
                    android:layout_alignEnd="@+id/carousel_portrait_2_image">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#1c1c1c"
                        android:ellipsize="end"
                        android:id="@+id/carousel_portrait_2_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:maxLines="1"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:background="#b0ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/carousel_portrait_2_image"
                    android:layout_alignTop="@+id/carousel_portrait_2_image"
                    android:layout_alignRight="@+id/carousel_portrait_2_image"
                    android:layout_alignBottom="@+id/carousel_portrait_2_image"
                    android:layout_alignStart="@+id/carousel_portrait_2_image"
                    android:layout_alignEnd="@+id/carousel_portrait_2_image"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/carousel_portrait_1_container"
                android:layout_width="wrap_content"
                android:layout_height="192dp"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/carousel_portrait_1_image"
                    android:background="@drawable/carousel_v1_drop_shadow"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="212dp"
                    android:layout_height="192dp"
                    android:scaleType="centerCrop"
                    android:cropToPadding="true"/>
                <RelativeLayout
                    android:background="#b2ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignLeft="@+id/carousel_portrait_1_image"
                    android:layout_alignRight="@+id/carousel_portrait_1_image"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/carousel_portrait_1_image"
                    android:layout_alignEnd="@+id/carousel_portrait_1_image">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#1c1c1c"
                        android:ellipsize="end"
                        android:id="@+id/carousel_portrait_1_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:maxLines="1"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/carousel_body_landscape"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/carousel_landscape_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/carousel_landscape_image"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:background="#b2ffffff"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/carousel_landscape_image"
                android:layout_alignRight="@+id/carousel_landscape_image"
                android:layout_alignBottom="@+id/carousel_landscape_image"
                android:layout_alignStart="@+id/carousel_landscape_image"
                android:layout_alignEnd="@+id/carousel_landscape_image">
                <TextView
                    android:textSize="12sp"
                    android:textColor="#1c1c1c"
                    android:ellipsize="end"
                    android:id="@+id/carousel_landscape_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:maxLines="1"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <ImageView
            android:layout_gravity="right"
            android:id="@+id/next"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/right"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_gravity="left"
            android:id="@+id/prev"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/left"
            android:scaleType="fitXY"/>
    </FrameLayout>
</FrameLayout>
