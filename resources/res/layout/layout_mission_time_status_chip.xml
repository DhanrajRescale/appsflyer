<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:tag="layout/layout_mission_time_status_chip_0"
    android:padding="1dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="40dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/green_19A574"
    app:strokeWidth="1dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chip_background"
        android:background="@color/green_light_new"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:paddingRight="6dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:paddingHorizontal="6dp"
        android:paddingVertical="4dp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/mission_status_lottie"
            android:layout_width="14dp"
            android:layout_height="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_fileName="mission_timer_green.json"
            app:lottie_repeatCount="20"
            app:lottie_repeatMode="restart"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/green_19A574"
            android:id="@+id/mission_chip_text"
            android:tag="binding_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_500"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/mission_status_lottie"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
