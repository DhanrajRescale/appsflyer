<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/data_container"
    android:tag="layout/layout_profit_container_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="24dp"
    android:layout_marginHorizontal="2dp"
    app:cardBackgroundColor="@color/portfolioScreenCardColor"
    app:cardCornerRadius="12dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/portfolio_secondary_information_container"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:id="@+id/realised_profit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/realised_profit"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/realised_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_600"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/skyBlueCardSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:id="@+id/unrealised_profit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unrealised_profit"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/unrealised_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_600"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/skyBlueCardSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:id="@+id/transaction_charges_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/transaction_charges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_600"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:background="@color/skyBlueCardSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:id="@+id/label_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pending_order_amount"
                android:fontFamily="@font/inter_500"/>
            <TextView
                android:textSize="13dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/pending_order_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 0"
                android:fontFamily="@font/inter_600"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
