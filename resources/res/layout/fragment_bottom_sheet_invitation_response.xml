<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_bottom_sheet_invitation_response_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btnDownload"
        android:layout_width="256dp"
        android:layout_height="256dp"
        app:layout_constraintBottom_toBottomOf="@+id/status_icon"
        app:layout_constraintEnd_toEndOf="@+id/status_icon"
        app:layout_constraintStart_toStartOf="@+id/status_icon"
        app:layout_constraintTop_toTopOf="@+id/status_icon"
        app:lottie_autoPlay="true"
        app:lottie_fileName="onboarding_confetti.json"
        app:lottie_repeatCount="10"
        app:lottie_repeatMode="restart"/>
    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="214dp"
        android:layout_height="149dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="22dp"
        android:textColor="@color/black_1A1A1A"
        android:layout_gravity="center"
        android:id="@+id/hurray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/hurray"
        android:fontFamily="@font/inter_600"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_icon"/>
    <TextView
        android:textSize="18dp"
        android:textColor="@color/black_1A1A1A"
        android:layout_gravity="center"
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:fontFamily="@font/inter_500"
        android:textAlignment="center"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hurray"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black_1A1A1A"
        android:layout_gravity="center"
        android:id="@+id/secondary_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:fontFamily="@font/inter_400"
        android:textAlignment="center"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondary_status">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/action"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/invitation_code_cta_title"
            android:layout_marginHorizontal="16dp"
            style="@style/secondaryButton"/>
    </LinearLayout>
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>
