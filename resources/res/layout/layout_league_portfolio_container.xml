<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/portfolio_container"
    android:tag="layout/layout_league_portfolio_container_0"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/portfolio_disclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="#f5ecff"
        app:cardCornerRadius="10dp"
        app:strokeColor="#1a7515d5"
        app:strokeWidth="1dp">
        <TextView
            android:textSize="10dp"
            android:textColor="@color/black_1A1A1A"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/portfolio_data_disclaimer_one"
            android:drawablePadding="4dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            app:drawableStartCompat="@drawable/ic_sg_info_12dp"/>
    </com.google.android.material.card.MaterialCardView>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/portfolio_name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <TextView
            android:textSize="18dp"
            android:textColor="@color/black_1A1A1A"
            android:id="@+id/portfolio_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter_600"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/invite_friends"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.button.MaterialButton
            android:textSize="10dp"
            android:id="@+id/invite_friends"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:paddingRight="12dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:text="@string/invite_a_friend"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            style="@style/primaryButton"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/pending_order_message_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/order_pending_league_portfolio_page_message_one"
            android:fontFamily="@font/inter_500"
            android:textAlignment="center"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"/>
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_bull_timer"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A_40"
            android:id="@+id/order_pending_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/order_pending_league_portfolio_page_message_two"
            android:fontFamily="@font/inter_500"
            android:textAlignment="center"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/cancelled_task_message_container"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_bull_in_chair"/>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/black_1A1A1A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/ugh"
            android:fontFamily="@font/inter_600"
            android:textAlignment="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/league_cancelled_message"
            android:fontFamily="@font/inter_500"
            android:textAlignment="center"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"/>
    </LinearLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:id="@+id/data_container"
        android:tag="binding_1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/layout_league_portfolio_snapshot"
            layout="@layout/layout_league_portfolio_snapshot"/>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="16dp"/>
        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:id="@+id/portfolio_secondary_information_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/arenaScreenCardColor"
            app:cardCornerRadius="12dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/black_1A1A1A_40"
                        android:id="@+id/realised_profit_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/realised_profit"
                        android:fontFamily="@font/inter_500"/>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="@color/black_1A1A1A"
                        android:id="@+id/realised_profit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_600"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:background="@color/skyBlueCardSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/black_1A1A1A_40"
                        android:id="@+id/unrealised_profit_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unrealised_profit"
                        android:fontFamily="@font/inter_500"/>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="@color/black_1A1A1A"
                        android:id="@+id/unrealised_profit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_600"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:background="@color/skyBlueCardSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/black_1A1A1A_40"
                        android:id="@+id/transaction_charges_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_500"/>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="@color/black_1A1A1A"
                        android:id="@+id/transaction_charges_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_600"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <View
                    android:background="@color/skyBlueCardSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/black_1A1A1A_40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pending_order_amount"
                        android:fontFamily="@font/inter_500"/>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="@color/black_1A1A1A"
                        android:id="@+id/pending_order_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_600"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:textSize="18dp"
            android:textColor="@color/black_1A1A1A"
            android:id="@+id/asset_text"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/total_traded_stocks"
            android:fontFamily="@font/inter_600"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            android:id="@+id/portfolio_stock_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginHorizontal="14dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            android:id="@+id/portfolio_frozen_stock_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginHorizontal="14dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="96dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>
