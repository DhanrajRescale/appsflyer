<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/data_container"
    android:tag="layout/layout_withdrawal_paytm_wallet_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/default_card_radius">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/rounded_sky_blue_rectangle_corner_radius_16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <com.assetgro.stockgro.widget.InputView
            android:id="@+id/withdrawal_paytm_mobile_number_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:inputViewType="number"
            app:title="@string/mobile_number_mandatory_label"/>
        <com.assetgro.stockgro.widget.InputView
            android:id="@+id/withdrawal_paytm_money_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:inputViewType="money"
            app:title="@string/text_amount"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
