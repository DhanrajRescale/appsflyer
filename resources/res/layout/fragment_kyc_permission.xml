<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_kyc_permission_0"
    android:background="@color/onBoardingScreenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/illustration"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="32dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bull_selfie"/>
    <ImageView
        android:id="@+id/kyc_camera_icon"
        android:visibility="visible"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/kyc_camera_text_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/illustration"
        app:srcCompat="@drawable/ic_kyc_camera"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/kyc_camera_text_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/camera"
        android:fontFamily="@font/inter_600"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/kyc_camera_icon"
        app:layout_constraintTop_toTopOf="@+id/kyc_camera_icon"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/kyc_camera_text_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:text="@string/camera_permission_message"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="@+id/kyc_camera_text_one"
        app:layout_constraintTop_toBottomOf="@+id/kyc_camera_text_one"/>
    <androidx.constraintlayout.widget.Group
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="kyc_location_icon,kyc_location_text_one,kyc_location_text_two"/>
    <ImageView
        android:id="@+id/kyc_location_icon"
        android:visibility="visible"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/kyc_location_text_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kyc_camera_icon"
        app:srcCompat="@drawable/ic_kyc_location"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/kyc_location_text_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/location"
        android:fontFamily="@font/inter_600"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/kyc_location_icon"
        app:layout_constraintTop_toTopOf="@+id/kyc_location_icon"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/kyc_location_text_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:text="@string/location_permission_message"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="@+id/kyc_location_text_one"
        app:layout_constraintTop_toBottomOf="@+id/kyc_location_text_one"/>
    <androidx.constraintlayout.widget.Group
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="kyc_microphone_icon,kyc_microphone_text_one,kyc_microphone_text_two"/>
    <ImageView
        android:id="@+id/kyc_microphone_icon"
        android:visibility="visible"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/kyc_microphone_text_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kyc_location_icon"
        app:srcCompat="@drawable/ic_kyc_mic"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/kyc_microphone_text_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/microphone"
        android:fontFamily="@font/inter_600"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/kyc_microphone_icon"
        app:layout_constraintTop_toTopOf="@+id/kyc_microphone_icon"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/kyc_microphone_text_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:text="@string/location_microphone_message"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="@+id/kyc_microphone_text_one"
        app:layout_constraintTop_toBottomOf="@+id/kyc_microphone_text_one"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/primaryButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
