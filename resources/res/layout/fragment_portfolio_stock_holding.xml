<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_portfolio_stock_holding_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/holdings_nested_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:tag="binding_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/portfolio_disclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardBackgroundColor="#f5ecff"
                    app:cardCornerRadius="10dp"
                    app:strokeColor="#1a7515d5"
                    app:strokeWidth="1dp">
                    <TextView
                        android:textSize="10dp"
                        android:textColor="@color/black_1A1A1A"
                        android:layout_gravity="center"
                        android:id="@+id/portfolio_disclaimer_text"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/portfolio_data_disclaimer_one"
                        android:drawablePadding="4dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="4dp"
                        app:drawableStartCompat="@drawable/ic_sg_info_12dp"/>
                </com.google.android.material.card.MaterialCardView>
                <include
                    android:id="@+id/portfolio_balance_layout"
                    layout="@layout/layout_portfolio_balance"/>
                <include
                    android:id="@+id/layout_portfolio_data_league"
                    layout="@layout/layout_portfolio_data_league"/>
                <include
                    android:id="@+id/layout_portfolio_value"
                    layout="@layout/layout_portfolio_value"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/stocks_layout"
                    android:tag="binding_2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">
                    <include
                        android:id="@+id/layout_profit_container"
                        layout="@layout/layout_profit_container"/>
                    <include
                        android:id="@+id/portfolio_returns_layout"
                        layout="@layout/layout_portfolio_returns"/>
                    <include
                        android:id="@+id/portfolio_leagues_joined"
                        android:visibility="gone"
                        layout="@layout/layout_leagues_joined"/>
                    <include
                        android:id="@+id/portfolio_stocks_layout"
                        layout="@layout/layout_portfolio_holdings_stocks"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/pending_order_message_container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_bull_arrow"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/black_1A1A1A_40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/order_pending_portfolio_holding"
                        android:fontFamily="@font/inter_500"
                        android:textAlignment="center"
                        android:layout_marginStart="64dp"
                        android:layout_marginEnd="64dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/no_stocks_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="138dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_no_stocks"/>
                    <TextView
                        android:textSize="18dp"
                        android:textColor="@color/black_1A1A1A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/oops"
                        android:fontFamily="@font/inter_600"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/black_1A1A1A_40"
                        android:gravity="center"
                        android:id="@+id/no_asset_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="@string/text_no_stocks"/>
                </LinearLayout>
                <androidx.legacy.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="96dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>
