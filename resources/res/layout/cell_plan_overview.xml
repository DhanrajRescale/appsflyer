<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/cell_plan_overview_0"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:minHeight="96dp"
    android:layout_marginHorizontal="16dp">
    <TextView
        android:textSize="18dp"
        android:textColor="@color/black_1A1A1A"
        android:id="@+id/plan_name"
        android:tag="binding_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black"
        android:id="@+id/original_price"
        android:tag="binding_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/black"
        android:id="@+id/free"
        android:tag="binding_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/free"
        android:fontFamily="@font/inter_600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="20dp"
        android:textColor="@color/black"
        android:id="@+id/discounted_price"
        android:tag="binding_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_600"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/price_duration"
        app:layout_constraintEnd_toStartOf="@+id/price_duration"
        app:layout_constraintTop_toTopOf="@+id/price_duration"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/black"
        android:id="@+id/price_duration"
        android:tag="binding_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/original_price"
        app:layout_goneMarginTop="16dp"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/actionButton"
        android:id="@+id/view_feature"
        android:paddingTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/view_features"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
