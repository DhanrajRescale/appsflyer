<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_leagues_joined_0"
    android:background="@drawable/rounded_color_primary_rectangle_corner_radius_8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">
    <TextView
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black_1A1A1A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Leagues Joined"
        android:layout_centerVertical="true"
        android:fontFamily="@font/inter_600"
        android:layout_marginStart="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="79dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/ic_league"/>
            <TextView
                android:textSize="15dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IIM Bangalore"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter_500"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_first"/>
        </RelativeLayout>
        <View
            android:background="@color/colorPrimaryLightSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="24dp">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/ic_league_picture"/>
            <TextView
                android:textSize="15dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mumbai Maverics"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter_500"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_second"/>
        </RelativeLayout>
        <View
            android:background="@color/colorPrimaryLightSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="24dp">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_league_person"/>
            <TextView
                android:textSize="15dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Lollypop League"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter_500"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_third"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
