<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/cell_stock_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="2dp"
    app:cardBackgroundColor="@color/skyBlue"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/stock_image"
            android:background="@drawable/image_circle_grey_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="19dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A"
            android:ellipsize="end"
            android:id="@+id/stock_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lines="1"
            android:fontFamily="@font/inter_500"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/stock_image"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/black_1A1A1A"
            android:id="@+id/stock_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_600"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/stock_image"
            app:layout_constraintTop_toBottomOf="@+id/stock_name"/>
        <com.assetgro.stockgro.widget.StockChangeInfoView
            android:gravity="end"
            android:id="@+id/stock_change_info_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/stock_price"
            app:layout_constraintTop_toBottomOf="@+id/stock_name"
            app:layout_goneMarginStart="16dp"/>
        <View
            android:id="@+id/sector_background"
            android:background="@drawable/rounded_color_light_white_rectangle_corner_radius__bottom_16dp"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stock_price"/>
        <TextView
            android:textSize="11dp"
            android:textColor="@color/black_1A1A1A_40"
            android:id="@+id/sector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAllCaps="true"
            android:fontFamily="@font/inter_400"
            app:layout_constraintBottom_toBottomOf="@+id/sector_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sector_background"/>
        <View
            android:id="@+id/footer_view"
            android:background="@drawable/rounded_color_light_white_rectangle_corner_radius__bottom_16dp"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stock_change_info_view"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
