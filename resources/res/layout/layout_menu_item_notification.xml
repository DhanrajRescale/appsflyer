<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_notification_layout"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ic_notification_bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="11dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:id="@+id/cart_badge_notification"
        android:background="@drawable/badge_background"
        android:paddingLeft="4dp"
        android:paddingTop="1dp"
        android:paddingRight="4dp"
        android:paddingBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:fontFamily="@font/inter_600"
        android:paddingHorizontal="4dp"
        android:paddingVertical="1dp"
        app:layout_constraintBottom_toTopOf="@+id/ic_notification_bell"
        app:layout_constraintEnd_toEndOf="@+id/ic_notification_bell"
        app:layout_constraintStart_toEndOf="@+id/ic_notification_bell"
        app:layout_constraintTop_toTopOf="@+id/ic_notification_bell"/>
</androidx.constraintlayout.widget.ConstraintLayout>
