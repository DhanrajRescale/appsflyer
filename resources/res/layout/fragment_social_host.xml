<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/fragment_social_host_0"
    android:background="@color/screenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/app_bar_layout"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/toolbar_container"
            android:background="@drawable/collapsing_app_bar_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:theme="@style/SocialMenuStyle"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/collapsed_toolbar_height"
                android:minHeight="@dimen/collapsed_toolbar_height"
                android:elevation="0dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_menu_new"
                app:popupTheme="@style/SocialOverflowMenuStyle"
                app:titleTextColor="@color/toolbarTitleColor"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/options_toolbar_container"
            android:background="@drawable/collapsing_app_bar_background"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/options_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/collapsed_toolbar_height"
                android:minHeight="@dimen/collapsed_toolbar_height"
                android:elevation="0dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_back"
                app:title="@string/text_conversation_selected"
                app:titleTextColor="@color/toolbarTitleColor"/>
            <LinearLayout
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp">
                <ImageView
                    android:id="@+id/options_menu_mute"
                    android:background="@drawable/background_chat_option_menu"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_chat_option_mute"
                    android:paddingStart="10dp"
                    android:paddingEnd="8dp"
                    android:layout_marginEnd="8dp"
                    android:paddingVertical="10dp"
                    app:tint="@color/white"/>
                <ImageView
                    android:id="@+id/options_menu_pin"
                    android:background="@drawable/background_chat_option_menu"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="14dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_chat_option_pin"
                    android:layout_marginEnd="14dp"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="14dp"
                    app:tint="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <include
        android:id="@+id/content_social"
        layout="@layout/content_social"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
