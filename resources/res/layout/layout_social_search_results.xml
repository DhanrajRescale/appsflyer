<?xml version="1.0" encoding="utf-8"?>
<com.assetgro.stockgro.widget.TouchDetectableScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/social_search_scroll_view"
    android:tag="layout/layout_social_search_results_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/screenBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/search_option_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textSize="12dp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/chip_all"
                android:background="@drawable/background_social_search_chip_selected"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_all"
                android:layout_weight="1"
                android:fontFamily="@font/inter_500"
                android:textAlignment="center"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/chip_people"
                android:background="@drawable/background_social_search_chip_unselected"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_people"
                android:layout_weight="1"
                android:fontFamily="@font/inter_500"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/chip_groups"
                android:background="@drawable/background_social_search_chip_unselected"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_groups"
                android:layout_weight="1"
                android:fontFamily="@font/inter_500"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/search_result_first_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:textSize="14dp"
                android:id="@+id/label_first_search_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/inter_600"
                android:layout_marginStart="20dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/search_result_first_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:id="@+id/view_more_first_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/text_view_more"
                    android:fontFamily="@font/inter_600"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/no_search_result_first_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_social_search_no_results"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/social_text_color"
                android:id="@+id/no_results_in_category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="32dp"
                android:text="@string/no_contact_search_results_text"
                android:fontFamily="@font/inter_500"
                android:layout_marginHorizontal="32dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/search_result_second_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_result_first_container">
            <TextView
                android:textSize="14dp"
                android:id="@+id/label_second_search_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/inter_600"
                android:layout_marginStart="20dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/search_result_second_data_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/search_result_second_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/label_recent"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:id="@+id/view_more_second_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/text_view_more"
                    android:fontFamily="@font/inter_600"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/no_search_result_second_container"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_social_search_no_results"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/social_text_color"
                    android:gravity="center"
                    android:id="@+id/text_no_data_second_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="32dp"
                    android:text="@string/no_contact_search_results_text"
                    android:fontFamily="@font/inter_500"
                    android:layout_marginHorizontal="32dp"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>
</com.assetgro.stockgro.widget.TouchDetectableScrollView>
