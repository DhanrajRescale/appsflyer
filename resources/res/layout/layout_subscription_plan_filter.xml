<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:id="@+id/subscription_filter_layout"
    android:tag="layout/layout_subscription_plan_filter_0"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:weightSum="4"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:textColor="@color/black_1A1A1A"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/subscription_chip_all"
        android:background="@drawable/rounded_corners_chip_unselected_12_dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/text_all"
        android:layout_weight="1"
        android:fontFamily="@font/inter_600"
        android:textAlignment="center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        style="@style/ChipCustomStyle"/>
    <TextView
        android:textColor="@color/black_1A1A1A"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/subscription_chip_basic"
        android:background="@drawable/rounded_corners_chip_unselected_12_dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/text_basic"
        android:layout_weight="1"
        android:fontFamily="@font/inter_600"
        android:textAlignment="center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        style="@style/ChipCustomStyle"/>
    <TextView
        android:textColor="@color/black_1A1A1A"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/subscription_chip_advanced"
        android:background="@drawable/rounded_corners_chip_unselected_12_dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/text_advanced"
        android:layout_weight="1"
        android:fontFamily="@font/inter_600"
        android:textAlignment="center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        style="@style/ChipCustomStyle"/>
    <TextView
        android:textColor="@color/black_1A1A1A"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/subscription_chip_expert"
        android:background="@drawable/rounded_corners_chip_unselected_12_dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="@string/text_expert"
        android:layout_weight="1"
        android:fontFamily="@font/inter_600"
        android:textAlignment="center"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        style="@style/ChipCustomStyle"/>
</LinearLayout>
