<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/layout_wallet_bifurcation_0"
    android:background="@drawable/rounded_stroke_grey_background_white_rectangle_corner_radius_16dp"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="10dp"
        android:textColor="@color/black_1A1A1A_60"
        android:id="@+id/available_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_available"
        android:fontFamily="@font/inter_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/black_1A1A1A_60"
        android:id="@+id/debit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deduction"
        android:fontFamily="@font/inter_500"
        app:layout_constraintBottom_toBottomOf="@+id/available_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/available_title"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/black_1A1A1A_60"
        android:id="@+id/deposit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/deposit"
        android:fontFamily="@font/inter_600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/available_title"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/black_1A1A1A"
        android:id="@+id/deposit_available_value"
        android:tag="binding_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:fontFamily="@font/inter_600"
        android:textAlignment="textEnd"
        app:drawableStartCompat="@drawable/ic_deposit_14dp_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/deposit_title"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/low_balance"
        android:id="@+id/deposit_debit_amount"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:fontFamily="@font/inter_600"
        android:textAlignment="textEnd"
        app:drawableStartCompat="@drawable/ic_stockgro_currency_vector_red_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/deposit_title"/>
    <View
        android:id="@+id/separator"
        android:background="@color/black_1A1A1A_60"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:alpha="0.2"
        android:layout_marginVertical="12dp"
        app:layout_constraintBottom_toTopOf="@+id/sg_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deposit_title"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/black_1A1A1A_60"
        android:id="@+id/sg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_stockgro_cash"
        android:fontFamily="@font/inter_600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/black_1A1A1A"
        android:id="@+id/sg_available_value"
        android:tag="binding_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:fontFamily="@font/inter_600"
        android:textAlignment="textEnd"
        app:drawableStartCompat="@drawable/ic_cash_14dp_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sg_title"/>
    <TextView
        android:textSize="10dp"
        android:textColor="@color/low_balance"
        android:id="@+id/sg_debit_amount"
        android:tag="binding_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:fontFamily="@font/inter_600"
        android:textAlignment="textEnd"
        android:drawableTint="@color/low_balance"
        app:drawableStartCompat="@drawable/ic_cash_red_14dp_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sg_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
