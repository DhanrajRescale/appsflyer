<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_pin_retry_withdrawal_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="24dp"
        android:id="@+id/enter_pin_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:text="@string/enter_pin"
        android:fontFamily="@font/inter_600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.chaos.view.PinView
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:id="@+id/pin_view"
        android:padding="4dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:itemBackground="@color/secondaryButtonBackgroundColor"
        android:hint="@string/ok"
        android:inputType="numberPassword"
        app:cursorWidth="2dp"
        app:itemCount="4"
        app:itemHeight="56dp"
        app:itemRadius="16dp"
        app:itemSpacing="12dp"
        app:itemWidth="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_pin_label"
        app:lineColor="@android:color/transparent"
        app:lineWidth="1dp"
        app:viewType="surfaceView"/>
    <TextView
        android:textSize="16dp"
        android:gravity="center"
        android:id="@+id/pin_retry_error_text"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/enter_pin"
        android:fontFamily="@font/inter_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pin_view"/>
    <com.assetgro.stockgro.ui.payments.filter.WithdrawalPinDialog
        android:id="@+id/custom_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pin_retry_error_text"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_cancel"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:backgroundTint="@color/darkTabUnselectedSelectedColor"
        app:layout_constraintTop_toBottomOf="@+id/custom_keyboard"
        app:tint="@color/white"
        style="@style/secondaryButton"/>
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cancel_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
