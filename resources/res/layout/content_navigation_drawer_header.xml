<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/content_navigation_drawer_header_0"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/top_background"
        android:background="@drawable/side_navigation_background"
        android:paddingTop="32dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_background"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="@color/homeScreenCardColor"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/user_profile_container"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/user_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:crownLocation="none"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/nav_items_color"
                android:ellipsize="end"
                android:id="@+id/name_navigation_drawer_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="@font/inter_600"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/user_image"
                app:layout_constraintEnd_toEndOf="@+id/subscription_layout"
                app:layout_constraintStart_toEndOf="@+id/user_image"
                app:layout_constraintTop_toTopOf="@+id/user_image"/>
            <com.google.android.material.button.MaterialButton
                android:textSize="12dp"
                android:id="@+id/subscription_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:text="@string/stockgro_plus"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                app:icon="@drawable/ic_nav_stock_gro_plus"
                app:iconGravity="textStart"
                app:iconTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_image"
                style="@style/primaryButton"/>
            <com.google.android.material.button.MaterialButton
                android:textSize="11dp"
                android:id="@+id/payment_options_layout"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:text="@string/stockgro_wallet"
                android:maxLines="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="4dp"
                android:paddingVertical="8dp"
                app:icon="@drawable/ic_nav_wallet"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconTint="@null"
                app:layout_constraintEnd_toStartOf="@+id/stockgro_exchange_options_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subscription_layout"
                style="@style/secondaryButton"/>
            <com.google.android.material.button.MaterialButton
                android:textSize="11dp"
                android:id="@+id/stockgro_exchange_options_layout"
                android:paddingLeft="0dp"
                android:paddingTop="8dp"
                android:paddingRight="0dp"
                android:paddingBottom="8dp"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:text="@string/shop"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:paddingHorizontal="0dp"
                android:paddingVertical="8dp"
                app:icon="@drawable/ic_nav_store"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/payment_options_layout"
                app:layout_constraintTop_toBottomOf="@+id/subscription_layout"
                style="@style/secondaryButton"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
