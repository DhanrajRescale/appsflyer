<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/cell_champion_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="2dp"
    app:cardBackgroundColor="@color/homeScreenCardColor"
    app:cardCornerRadius="12dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/black_1A1A1A"
            android:id="@+id/name_champion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/inter_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_image"/>
        <View
            android:id="@+id/vertical_divider"
            android:background="@color/skyBlueCardSeparator"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_champion"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/vertical_divider"
            app:layout_constraintEnd_toStartOf="@+id/vertical_divider"
            app:layout_constraintTop_toTopOf="@+id/vertical_divider">
            <TextView
                android:textSize="12dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/round_circle_yellow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="sp"
                android:textAllCaps="true"/>
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black_1A1A1A_40"
                android:id="@+id/sp_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/vertical_divider"
            app:layout_constraintStart_toEndOf="@+id/vertical_divider"
            app:layout_constraintTop_toTopOf="@+id/vertical_divider">
            <TextView
                android:textSize="12dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/round_circle_orange"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="TP"
                android:textAllCaps="true"/>
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black_1A1A1A_40"
                android:id="@+id/tp_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <View
            android:id="@+id/horizontal_divider"
            android:background="@color/skyBlueCardSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/vertical_divider"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A_40"
            android:id="@+id/money_won_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/total_money_won"
            android:fontFamily="@font/inter_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_divider"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/total_text_view_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/money_won_text">
            <ImageView
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="2dp"
                app:srcCompat="@drawable/ic_deposit_14dp_new"/>
            <TextView
                android:textSize="20dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_gravity="center_vertical"
                android:id="@+id/total_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_600"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/winning_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="40dp"
            android:progressDrawable="@drawable/progress_drawable"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@+id/total_text_view_container"
            style="?android:attr/progressBarStyleHorizontal"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/games_participated_info_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/winning_progress_bar">
            <View
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_circle_light_blue"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/leagues_participated"
                android:layout_weight="1"/>
            <TextView
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/black_1A1A1A"
                android:layout_gravity="center_vertical"
                android:id="@+id/games_participated_count_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_600"
                android:layout_marginEnd="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/games_participated_info_panel">
            <View
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_circle_blue"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A_40"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/leagues_won"
                android:layout_weight="1"/>
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black_1A1A1A"
                android:layout_gravity="center_vertical"
                android:id="@+id/games_won_count_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_600"
                android:layout_marginEnd="30dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
