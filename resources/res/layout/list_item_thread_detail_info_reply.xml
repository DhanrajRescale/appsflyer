<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/list_item_thread_detail_info_reply_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <RelativeLayout
        android:id="@+id/layout_image_group_chat_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/image_group_chat_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_placeholder_user"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/stockgro_logo"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="-16dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_below="@+id/image_group_chat_profile"
            android:layout_marginStart="-16dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chat_chevron_left"
        android:elevation="2dp"
        app:layout_constraintStart_toEndOf="@+id/layout_image_group_chat_profile"
        app:layout_constraintTop_toTopOf="@+id/layout_chat_message"
        app:layout_goneMarginStart="10dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/layout_chat_message"
        android:tag="binding_1"
        android:background="@drawable/background_chat_message_other_rounded"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-12dp"
        android:elevation="2dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        app:layout_constraintStart_toEndOf="@+id/iv_chevron"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="250dp"
        app:layout_constraintWidth_min="50dp">
        <TextView
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/chatSenderNameTextColor"
            android:id="@+id/group_chat_sender_name"
            android:paddingBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <include
            android:id="@+id/chat_media_text_consolidated_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group_chat_sender_name"
            layout="@layout/cell_chat_media_text_consolidated_view"/>
        <TextView
            android:textSize="11dp"
            android:textColor="@color/black_1A1A1A_40"
            android:id="@+id/text_group_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_media_text_consolidated_view"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:id="@+id/userLikes"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@+id/layout_chat_message"
        app:layout_constraintTop_toBottomOf="@+id/layout_chat_message"
        layout="@layout/list_item_chat_message_interaction_layout"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_alignBottom="@+id/card_group_chat_message"
        android:layout_toStartOf="@+id/card_group_chat_message"
        app:layout_constraintBottom_toBottomOf="@+id/layout_chat_message"
        app:layout_constraintStart_toEndOf="@+id/layout_chat_message"
        layout="@layout/list_item_chat_message_footer"/>
    <View
        android:id="@+id/selection_layer"
        android:background="@android:color/transparent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout_chat_message"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userLikes"
        app:layout_goneMarginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
