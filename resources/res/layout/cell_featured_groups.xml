<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/cell_featured_groups_0"
    android:layout_width="288dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginHorizontal="8dp">
    <ImageView
        android:id="@+id/group_image"
        android:tag="binding_1"
        android:background="@drawable/image_frame"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12dp"
        android:textColor="@color/white"
        android:id="@+id/subscription_package_name"
        android:tag="binding_2"
        android:background="@drawable/subscription_tag_advance"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/inter_500"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/group_image"
        app:layout_constraintEnd_toEndOf="parent"/>
    <RelativeLayout
        android:background="@drawable/rounded_light_blue_rectangle_corner_radius_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/group_image"
        app:layout_constraintStart_toStartOf="@+id/group_image"
        app:layout_constraintTop_toBottomOf="@+id/group_image">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/colorAccent"
            android:ellipsize="end"
            android:id="@+id/group_name"
            android:tag="binding_3"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:lineSpacingMultiplier="0.9"
            android:fontFamily="@font/inter_500"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:autoSizeTextType="uniform"
            android:paddingVertical="8dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
