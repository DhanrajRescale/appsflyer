<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_stock_payment_success_0"
    android:background="@color/screenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/collapsing_app_bar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            app:layout_constraintDimensionRatio="2"
            app:srcCompat="@drawable/ic_transaction_pending"/>
        <TextView
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/modification_pending"
            android:fontFamily="@font/inter_600"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/rounded_sky_blue_rectangle_corner_radius_16dp"
            android:paddingTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="24dp"
            android:paddingStart="28dp"
            android:paddingEnd="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <ImageView
                android:id="@+id/stock_image"
                android:background="@drawable/image_circle_grey_view"
                android:layout_width="@dimen/circularImageSize"
                android:layout_height="@dimen/circularImageSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_placeholder_stock"/>
            <TextView
                android:textSize="15dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/stock_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@+id/exchange"
                app:layout_constraintStart_toEndOf="@+id/stock_image"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="10dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="0.3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/stock_image"
                app:layout_constraintTop_toBottomOf="@+id/stock_name">
                <com.assetgro.stockgro.widget.DisplayView
                    android:id="@+id/quantity_display_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:title="@string/quantity"
                    app:titleColor="@color/black_1A1A1A_40"
                    app:valueColor="@color/black_1A1A1A"/>
                <View
                    android:background="@color/skyBlueCardSeparator"
                    android:layout_width="1dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginStart="-15dp"
                    android:layout_marginEnd="2dp"/>
                <com.assetgro.stockgro.widget.DisplayView
                    android:id="@+id/price_display_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:title="@string/price"
                    app:titleColor="@color/black_1A1A1A_40"
                    app:valueColor="@color/black_1A1A1A"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:id="@+id/publish_to_friends"
        android:visibility="gone"
        android:layout_width="363dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:text="@string/publish_to_friends"
        android:textAllCaps="true"
        android:fontFamily="@font/inter_600"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/view_portfolio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_portfolio"
        android:layout_width="match_parent"
        android:text="@string/view_portfolio"
        app:layout_constraintBottom_toTopOf="@+id/explore_market"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/primaryButton"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:id="@+id/explore_market"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:text="@string/explore_market"
        android:fontFamily="@font/inter_600"
        android:textAlignment="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
