<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/collapsing_app_bar_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/portfolio_option_expanded_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black_1A1A1A"
            android:id="@+id/portfolio_expanded_list_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default Portfolio"
            android:fontFamily="@font/inter_600"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:id="@+id/portfolio_expanded_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_dropdown_icon"/>
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:background="@drawable/rounded_color_light_white_rectangle_corner_radius_16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:layout_collapseMode="pin"
        app:tabBackground="@drawable/tab_dark_theme_selector"
        app:tabIndicator="@android:color/transparent"
        app:tabRippleColor="@android:color/transparent">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_tab_holdings"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_tab_orders"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_tab_history"/>
    </com.google.android.material.tabs.TabLayout>
</LinearLayout>
