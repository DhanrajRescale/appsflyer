<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:tag="layout/activity_recharge_wallet_0"
    android:background="@color/screenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@drawable/collapsing_app_bar_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collapsed_toolbar_height"
            android:minHeight="@dimen/collapsed_toolbar_height"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:elevation="0dp"
            app:layout_collapseMode="pin"
            app:navigationIcon="@drawable/ic_back_button"
            app:titleTextColor="@color/toolbarTitleColor"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="24dp"
            app:cardBackgroundColor="@color/homeScreenCardColor"
            app:cardCornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.assetgro.stockgro.widget.InputView
                    android:id="@+id/add_money_input_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:inputViewType="money"
                    app:title="@string/text_amount"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/chip_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_below="@+id/add_money_input_view"
                    android:layout_marginStart="34dp"
                    android:layout_marginEnd="34dp">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:id="@+id/add_money_fifty"
                        android:background="@drawable/background_sell_button"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_marginBottom="16dp"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:fontFamily="@font/inter_600"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:id="@+id/add_money_hundred"
                        android:background="@drawable/background_sell_button"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_marginBottom="16dp"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:fontFamily="@font/inter_600"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:id="@+id/add_money_two_fifty"
                        android:background="@drawable/background_sell_button"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_marginBottom="16dp"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:fontFamily="@font/inter_600"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:id="@+id/add_money_five_hundred"
                        android:background="@drawable/background_sell_button"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_marginBottom="16dp"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:fontFamily="@font/inter_600"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                </LinearLayout>
                <TextView
                    android:textSize="11dp"
                    android:gravity="end"
                    android:id="@+id/payment_add_message"
                    android:padding="16dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chip_container"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:textSize="11dp"
            android:textColor="@color/black_1A1A1A"
            android:id="@+id/title_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:text="@string/note"
            android:alpha="0.6"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container"/>
        <TextView
            android:textSize="11dp"
            android:textColor="@color/black_1A1A1A"
            android:id="@+id/bifurcation_note"
            android:tag="binding_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:alpha="0.6"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_note"/>
        <View
            android:id="@+id/add_money_background"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.google.android.material.button.MaterialButton
            android:textSize="14dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/add_money_button"
            android:background="@drawable/ic_create_group"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:text="@string/text_proceed_to_add_money"
            android:fontFamily="@font/inter_600"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/primaryButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
