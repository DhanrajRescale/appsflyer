<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maintenance_view_container"
    android:tag="layout/layout_maintenance_v2_0"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/maintenance_anim"
        android:layout_width="wrap_content"
        android:layout_height="228dp"
        app:layout_constraintBottom_toTopOf="@+id/maintenance_message_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:lottie_autoPlay="true"
        app:lottie_fileName="maintenance_icon_v2.json"
        app:lottie_repeatCount="1000"
        app:lottie_repeatMode="restart"/>
    <TextView
        android:textColor="@color/black_1A1A1A"
        android:gravity="center"
        android:id="@+id/maintenance_message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:text="@string/app_maintenance_message"
        android:fontFamily="@font/inter_400"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@+id/app_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maintenance_anim"/>
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_maintenance_v2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maintenance_message_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>
