<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_container"
    android:tag="layout/cell_pinned_message_0"
    android:background="@color/stream_transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginHorizontal="16dp">
        <RelativeLayout
            android:id="@+id/layout_image_group_chat_profile"
            android:visibility="gone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_group_chat_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/card_group_chat_message">
            <ImageView
                android:id="@+id/image_group_chat_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_placeholder_user"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/stockgro_logo"
                android:visibility="gone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="-16dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_below="@+id/image_group_chat_profile"
                android:layout_marginStart="-16dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_group_chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@+id/layout_image_group_chat_profile"
            android:layout_alignWithParentIfMissing="true"
            app:cardBackgroundColor="@color/chatMessageMineBackgroundColor"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintLeft_toRightOf="@+id/layout_image_group_chat_profile"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:orientation="vertical"
                android:tag="binding_1"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/chatSenderNameTextColor"
                    android:id="@+id/group_chat_sender_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_600"/>
                <include
                    android:id="@+id/chat_media_text_consolidated_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/cell_chat_media_text_consolidated_view"/>
                <TextView
                    android:textSize="11dp"
                    android:textColor="@color/black_1A1A1A_40"
                    android:layout_gravity="end"
                    android:id="@+id/text_group_chat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_400"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chat_media_text_consolidated_view"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
