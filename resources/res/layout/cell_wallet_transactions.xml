<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/cell_wallet_transactions_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14dp"
        android:textColor="@color/black_1A1A1A"
        android:id="@+id/transaction_month_heading"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test"
        android:maxLines="1"
        android:fontFamily="@font/inter_500"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="16dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wallet_transaction_container"
        android:background="@color/walletScreenCardColor"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/transaction_month_heading"
        app:layout_goneMarginTop="8dp">
        <ImageView
            android:id="@+id/image_view"
            android:tag="binding_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/transaction_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/transaction_description_text"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/black_1A1A1A"
            android:id="@+id/transaction_description_text"
            android:tag="binding_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLines="2"
            android:fontFamily="@font/inter_400"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/amount_text"
            app:layout_constraintStart_toEndOf="@+id/image_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="16dp"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/black_1A1A1A_40"
            android:id="@+id/transaction_time"
            android:tag="binding_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_500"
            app:layout_constraintStart_toStartOf="@+id/transaction_description_text"
            app:layout_constraintTop_toBottomOf="@+id/transaction_description_text"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/black_1A1A1A_40"
            android:id="@+id/remark"
            android:tag="binding_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_500"
            app:layout_constraintBottom_toBottomOf="@+id/transaction_time"
            app:layout_constraintEnd_toEndOf="@+id/amount_text"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/transaction_time"
            app:layout_constraintTop_toTopOf="@+id/transaction_time"/>
        <ImageView
            android:tag="binding_5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/transaction_status"
            app:layout_constraintEnd_toStartOf="@+id/transaction_status"
            app:layout_constraintTop_toTopOf="@+id/transaction_status"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/black_1A1A1A_60"
            android:id="@+id/transaction_status"
            android:tag="binding_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_400"
            app:layout_constraintBottom_toBottomOf="@+id/transaction_time"
            app:layout_constraintEnd_toEndOf="@+id/amount_text"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/transaction_time"
            app:layout_constraintTop_toTopOf="@+id/transaction_time"/>
        <TextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black_1A1A1A_60"
            android:id="@+id/amount_text"
            android:tag="binding_7"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_600"
            android:textAlignment="textEnd"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/transaction_description_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
