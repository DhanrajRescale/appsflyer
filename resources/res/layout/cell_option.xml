<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/cell_option_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="14dp"
    android:layout_marginHorizontal="2dp"
    app:cardBackgroundColor="@color/skyBlue"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/option_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="19dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/black_1A1A1A"
            android:ellipsize="end"
            android:id="@+id/option_name"
            android:tag="binding_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:lines="1"
            android:fontFamily="@font/inter_500"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/option_image"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/black_1A1A1A_80"
            android:id="@+id/tag"
            android:tag="binding_2"
            android:background="@drawable/rounded_color_light_white_rectangle_corner_radius__bottom_16dp"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/inter_500"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            app:layout_constraintEnd_toEndOf="@+id/change_view"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="13dp"
            android:textColor="@color/black_1A1A1A"
            android:id="@+id/ltp"
            android:tag="binding_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_600"
            app:layout_constraintStart_toStartOf="@+id/option_name"
            app:layout_constraintTop_toBottomOf="@+id/option_name"/>
        <com.assetgro.stockgro.widget.StockChangeInfoView
            android:id="@+id/change_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/ltp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ltp"/>
        <TextView
            android:textSize="11dp"
            android:textColor="@color/black_1A1A1A_40"
            android:id="@+id/sector"
            android:tag="binding_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/inter_400"
            app:layout_constraintBottom_toBottomOf="@+id/sector_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sector_background"/>
        <View
            android:id="@+id/sector_background"
            android:background="@drawable/rounded_color_light_white_rectangle_corner_radius__bottom_16dp"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_view"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
