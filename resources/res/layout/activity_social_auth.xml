<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/activity_social_auth_0"
    android:background="@color/onBoardingScreenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/illustration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:maxHeight="232dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintDimensionRatio="2.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_login"/>
    <TextView
        android:textSize="24dp"
        android:textColor="@color/black_1A1A1A"
        android:id="@+id/authenticate_via_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="35dp"
        android:text="@string/text_get_verified"
        android:fontFamily="@font/inter_600"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/illustration"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authenticate_via_label">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginHorizontal="32dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp">
                <RelativeLayout
                    android:id="@+id/facebook_auth_container"
                    android:background="@color/color_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <ImageView
                        android:id="@+id/facebook_icon"
                        android:background="@drawable/rounded_color_white_rectangle_corner_radius_4dp"
                        android:padding="4dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/ic_facebook_logo"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/socialFacebookButton"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_connect_with_facebook"
                        android:layout_centerVertical="true"
                        android:textAllCaps="false"
                        android:layout_toEndOf="@+id/facebook_icon"
                        fontPath="fonts/StockGroBold.ttf"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp">
                <RelativeLayout
                    android:id="@+id/linkedin_auth_container"
                    android:background="@color/color_linkedin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <ImageView
                        android:id="@+id/linkedin_icon"
                        android:background="@drawable/rounded_color_white_rectangle_corner_radius_4dp"
                        android:padding="4dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_linked_in_logo"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/socialLinkedInButton"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_connect_with_linkedin"
                        android:layout_centerVertical="true"
                        android:textAllCaps="false"
                        android:layout_marginEnd="32dp"
                        android:layout_toEndOf="@+id/linkedin_icon"
                        fontPath="fonts/StockGroBold.ttf"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
