<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/cell_maintenance_view_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginHorizontal="16dp"
    app:cardBackgroundColor="@color/homeScreenCardColor"
    app:cardCornerRadius="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/maintenance_view_container"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="14dp"
        android:paddingRight="16dp"
        android:paddingBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/maintenance_anim"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="maintenance_icon_v2.json"
            app:lottie_repeatCount="1000"
            app:lottie_repeatMode="restart"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/maintenance_anim"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textSize="10dp"
                android:textColor="@color/black_1A1A1A"
                android:id="@+id/maintenance_message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_maintenance_message"
                android:fontFamily="@font/inter_400"/>
            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="58dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_maintenance_v2"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
