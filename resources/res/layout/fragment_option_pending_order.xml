<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_option_pending_order_0"
    android:background="@color/screenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintDimensionRatio="2"
            app:srcCompat="@drawable/ic_transaction_pending_v2"/>
        <TextView
            android:textSize="20dp"
            android:textColor="@color/social_text_accent_color"
            android:layout_gravity="center_horizontal"
            android:id="@+id/transaction_pending_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/transaction_pending"
            android:fontFamily="@font/inter_600"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/skyBlue"
            app:cardCornerRadius="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">
                <ImageView
                    android:id="@+id/stock_image"
                    android:tag="binding_1"
                    android:background="@drawable/image_circle_grey_view"
                    android:layout_width="@dimen/circularImageSize"
                    android:layout_height="@dimen/circularImageSize"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_placeholder_stock"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/black_1A1A1A"
                    android:id="@+id/stock_name"
                    android:tag="binding_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_500"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/stock_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/stock_image"
                    app:layout_constraintTop_toTopOf="@+id/stock_image"/>
                <TextView
                    android:textSize="10dp"
                    android:textColor="@color/black_1A1A1A"
                    android:id="@+id/exchange"
                    android:background="@drawable/bottom_rounded_grey_rectangle_corner_radius_4dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/options"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/first_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:weightSum="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/stock_image"
                    app:layout_constraintTop_toBottomOf="@+id/stock_image">
                    <com.assetgro.stockgro.widget.DisplayViewV2
                        android:id="@+id/quantity_display_view"
                        android:tag="binding_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:alignment="left"
                        app:titleColor="@color/black_1A1A1A_40"
                        app:valueColor="@color/black_1A1A1A"/>
                    <View
                        android:background="@color/skyBlueCardSeparator"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <com.assetgro.stockgro.widget.DisplayViewV2
                        android:id="@+id/price_display_view"
                        android:tag="binding_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:alignment="center"
                        app:titleColor="@color/black_1A1A1A_40"
                        app:titleText="@string/price"
                        app:valueColor="@color/black_1A1A1A"/>
                </LinearLayout>
                <View
                    android:background="@color/skyBlueCardSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/first_section"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/second_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/stock_image"
                    app:layout_constraintTop_toBottomOf="@+id/first_section">
                    <com.assetgro.stockgro.widget.DisplayViewV2
                        android:id="@+id/orderType_display_view"
                        android:tag="binding_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:alignment="left"
                        app:titleColor="@color/black_1A1A1A_40"
                        app:titleText="@string/order_type_fno"
                        app:valueColor="@color/black_1A1A1A"/>
                    <View
                        android:background="@color/skyBlueCardSeparator"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <com.assetgro.stockgro.widget.DisplayViewV2
                        android:id="@+id/total_margin_display_view"
                        android:tag="binding_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:alignment="center"
                        app:titleColor="@color/black_1A1A1A_40"
                        app:titleText="@string/total_margin"
                        app:valueColor="@color/black_1A1A1A"/>
                </LinearLayout>
                <View
                    android:background="@color/skyBlueCardSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/second_section"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/third_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/stock_image"
                    app:layout_constraintTop_toBottomOf="@+id/second_section">
                    <com.assetgro.stockgro.widget.DisplayViewV2
                        android:id="@+id/alpha_portfolio_display_view"
                        android:tag="binding_7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:alignment="center"
                        app:titleColor="@color/black_1A1A1A"
                        app:titleText="@string/margin_balance_pending"
                        app:valueColor="@color/black_1A1A1A"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_portfolio"
        android:layout_width="match_parent"
        android:text="@string/view_portfolio"
        app:layout_constraintBottom_toTopOf="@+id/explore_market"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/primaryButton"/>
    <TextView
        android:textSize="14dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:id="@+id/explore_market"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:text="@string/explore_market"
        android:fontFamily="@font/inter_600"
        android:textAlignment="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
