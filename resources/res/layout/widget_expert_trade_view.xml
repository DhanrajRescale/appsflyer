<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/widget_expert_trade_view_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:strokeColor="#e4ddff"
        app:strokeWidth="1dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <TextView
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/trade_view_performance_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/trade_view_performance"
                android:fontFamily="@font/public_sans_600"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="128dp"
                android:layout_height="14dp"
                android:layout_marginTop="-4dp"
                android:src="@drawable/ic_trade_view_performance_scribble"
                app:layout_constraintEnd_toEndOf="@+id/trade_view_performance_title"
                app:layout_constraintTop_toBottomOf="@+id/trade_view_performance_title"/>
            <ImageView
                android:id="@+id/tade_view_info"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_sg_info_12dp"
                android:paddingStart="4dp"
                android:paddingEnd="6dp"
                android:paddingVertical="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/trade_view_performance_title"
                app:layout_constraintStart_toEndOf="@+id/trade_view_performance_title"
                app:layout_constraintTop_toTopOf="@+id/trade_view_performance_title"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/trade_view_performance_title">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/trade_view_tab_layout_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="#1ae4ddff"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#e4ddff"
                    app:strokeWidth="1dp">
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/trade_view_tab_layout"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_margin="8dp"
                        app:tabBackground="@drawable/tab_light_theme_selector"
                        app:tabGravity="fill"
                        app:tabIndicator="@android:color/transparent"
                        app:tabIndicatorAnimationMode="elastic"
                        app:tabMode="scrollable"
                        app:tabRippleColor="@android:color/transparent"
                        app:tabSelectedTextColor="@color/white"
                        app:tabTextAppearance="@style/StockGroDefaultTabStyleBold"
                        app:tabTextColor="#626262"/>
                </com.google.android.material.card.MaterialCardView>
                <androidx.constraintlayout.widget.Group
                    android:id="@+id/trade_view_performance_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="hit_rate_progress,hit_rate_icon,hit_rate_value,hit_rate_title,trade_view_data_container"/>
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/hit_rate_progress"
                    android:layout_width="148dp"
                    android:layout_height="148dp"
                    app:indicatorColor="@color/yellow_divider_color"
                    app:indicatorSize="148dp"
                    app:layout_constraintBottom_toBottomOf="@+id/trade_view_data_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/trade_view_data_container"
                    app:layout_constraintTop_toTopOf="@+id/trade_view_data_container"
                    app:trackColor="@color/grey_EBEBEB"
                    app:trackCornerRadius="32dp"
                    app:trackThickness="16dp"/>
                <ImageView
                    android:id="@+id/hit_rate_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/hit_rate_title"
                    app:layout_constraintEnd_toStartOf="@+id/hit_rate_value"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="@+id/hit_rate_progress"
                    app:layout_constraintTop_toTopOf="@+id/hit_rate_progress"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:id="@+id/hit_rate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/public_sans_700"
                    android:layout_marginStart="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/hit_rate_icon"
                    app:layout_constraintEnd_toEndOf="@+id/hit_rate_progress"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@+id/hit_rate_icon"
                    app:layout_constraintTop_toTopOf="@+id/hit_rate_icon"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <TextView
                    android:textSize="13dp"
                    android:textColor="#3d3d3d"
                    android:id="@+id/hit_rate_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hit_rate"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/public_sans_400"
                    app:drawableEndCompat="@drawable/ic_info_field_small"
                    app:layout_constraintBottom_toBottomOf="@+id/hit_rate_progress"
                    app:layout_constraintEnd_toEndOf="@+id/hit_rate_value"
                    app:layout_constraintStart_toStartOf="@+id/hit_rate_icon"
                    app:layout_constraintTop_toBottomOf="@+id/hit_rate_icon"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/trade_view_data_container"
                    android:padding="16dp"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/trade_view_tab_layout_container">
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#3d3d3d"
                        android:tag="binding_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/public_sans_400"/>
                    <TextView
                        android:textSize="20dp"
                        android:textColor="#3d3d3d"
                        android:id="@+id/total_trade_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/figtree_700"/>
                    <View
                        android:background="#dcdcdc"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#3d3d3d"
                        android:tag="binding_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/public_sans_400"/>
                    <TextView
                        android:textSize="20dp"
                        android:textColor="#3d3d3d"
                        android:id="@+id/missed_trade_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/figtree_700"/>
                    <View
                        android:background="#dcdcdc"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:textColor="#3d3d3d"
                        android:tag="binding_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/public_sans_400"/>
                    <TextView
                        android:textSize="20dp"
                        android:textColor="#3d3d3d"
                        android:id="@+id/profit_hit_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/figtree_700"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.Group
                    android:id="@+id/no_trade_view_performance_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="no_data_icon,no_data_message"/>
                <ImageView
                    android:id="@+id/no_data_icon"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/ic_trade_view_performance_no_data"
                    app:layout_constraintBottom_toTopOf="@+id/no_data_message"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/trade_view_tab_layout_container"
                    app:layout_constraintVertical_chainStyle="packed"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:id="@+id/no_data_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="48dp"
                    android:fontFamily="@font/figtree_regular"
                    android:layout_marginHorizontal="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/no_data_icon"
                    app:layout_constraintStart_toStartOf="@+id/no_data_icon"
                    app:layout_constraintTop_toBottomOf="@+id/no_data_icon"
                    app:layout_constraintVertical_chainStyle="packed"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
